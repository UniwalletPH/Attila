@model Attila.UI.Models.ViewEventVM




    <div>


        <div class="text-center">


            <h4>Event Details</h4>
        </div>
        <table class="event" style="width:100%" data-id="@Model.EventDetails.ID">
            <tr>
                <th>EVENT CODE</th>
                <th>EVENT NAME</th>
                <th>EVENT TYPE</th>
                <th>EVENT PACKAGE</th>
                <th>BOOKING DATE</th>
                <th>EVENT LOCATION</th>
                <th>EVENT DATE</th>
                <th>EVENT COORDINATOR</th>
            </tr>
            <tr>
                <td>@Model.EventDetails.Code</td>
                <td>@Model.EventDetails.EventName</td>
                <td>@Model.EventDetails.Type</td>
                <td>@Model.EventDetails.Package.Name</td>
                <td>@Model.EventDetails.BookingDate.ToShortDateString()</td>
                <td>@Model.EventDetails.Location</td>
                <td>@Model.EventDetails.EventDate.ToShortDateString()</td>
                <td>@Model.EventDetails.Coordinator.Name</td>
            </tr>
        </table>

        <div class="text-center">
            <h2>Additional Equipment Request</h2>
        </div>
        <table class="equipment" style="width:100%">
            <tr>
                <th>EQUIPMENT CODE</th>
                <th>EQUIPMENT NAME</th>
                <th>EQUIPMENT QUANTITY</th>
            </tr>

            @foreach (var item in Model.EventDetails.AdditionalEquipment)
            {
                <tr>
                    <td>@item.EquipmentDetails.Code</td>
                    <td>@item.EquipmentDetails.Name</td>
                    <td>@item.Quantity</td>
                </tr>
            }

        </table>

        <div class="text-center">
            <h2>Additional Duration Request</h2>
        </div>
        <table class="duration" style="width:100%">
            <tr>
                <th>DURATION</th>
                <th>RATE</th>
            </tr>
            <tr>
                <td>NONE</td>
                <td>NONE</td>
            </tr>
        </table>
        <div class="text-center">
            <input type="submit" id="btnApprove" value="Approve" class="btn btn-primary" />

            <input type="submit" id="btnDecline" value="Decline" class="btn btn-primary" />

        </div>


        <style>

            .event tr {
                background-color: #eee;
                border-top: 1px solid #fff;
            }

            .event td {
                padding: 8px 2px 10px 20px;
            }

            .event th, #example td {
                padding: 8px 2px 10px 20px;
            }
        </style>


    </div>
