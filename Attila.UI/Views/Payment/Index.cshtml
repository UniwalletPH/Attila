@{
    ViewData["Title"] = "Payment";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model IEnumerable<Attila.Application.Admin.Event.Queries.EventVM>


@section Styles{
    <link href="../assets/global/plugins/datatables/datatables.min.css" rel="stylesheet" type="text/css" />
    <link href="../assets/global/plugins/datatables/plugins/bootstrap/datatables.bootstrap.css" rel="stylesheet" type="text/css" />
}
<div class="page-head">
    <!-- BEGIN PAGE TITLE -->
    <div class="page-title">
        <h1>
            Events
            <small> </small>
        </h1>
    </div>
    <!-- END PAGE TITLE -->
    <!-- BEGIN PAGE TOOLBAR -->
    <div class="page-toolbar">

        <!-- BEGIN THEME PANEL -->
        <!-- END THEME PANEL -->
    </div>
    <!-- END PAGE TOOLBAR -->
</div>
<!-- END PAGE HEAD-->
<!-- BEGIN PAGE BREADCRUMB -->
<ul class="page-breadcrumb breadcrumb">
</ul>
<div class="row">

    <div class="col-md-12">
        <!-- BEGIN EXAMPLE TABLE PORTLET-->
        <div class="portlet light bordered">
            <div class="portlet-title">
                <div class="caption font-dark">
                    <i class="icon-settings font-dark"></i>
                    <span class="caption-subject bold uppercase">Events</span>
                </div>

            </div>
            <div class="portlet-body">
                <div class="table-toolbar">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="btn-group">
                                <button id="sample_editable_1_new" class="btn sbold green " onClick="addEvent()">
                                    Add New Event
                                    <i class="fa fa-plus"></i>
                                </button>
                            </div>
                            <div class="btn-group">
                                <button id="sample_editable_1_new" class="btn sbold green " onClick="addClient()">
                                    Add New Client
                                    <i class="fa fa-plus"></i>
                                </button>
                            </div>
                        </div>

                    </div>
                </div>

                <table class="table table-striped table-bordered table-hover order-column events" id="sample_1">
                    <thead>
                        <tr>

                            <th> Event Date </th>
                            <th> Booking Date </th>
                            <th> Event Name </th>
                            <th> Client </th>
                            <th> Coordinator </th>

                        </tr>
                    </thead>
                    <tbody>

                        @foreach (var item in Model)
                        {
                            <tr data-id="@item.ID">


                                <td>@Html.DisplayFor(modelItem => item.EventDate)</td>
                                <td> @Html.DisplayFor(modelItem => item.BookingDate)</td>
                                <td> @Html.DisplayFor(modelItem => item.EventName)</td>
                                <td> @Html.DisplayFor(modelItem => item.Client.Firstname) @Html.DisplayFor(modelItem => item.Client.Lastname)   </td>
                                <td> @Html.DisplayFor(modelItem => item.Coordinator.Name) | @Html.DisplayFor(modelItem => item.Coordinator.Position)  </td>
                                <td data-id="@item.ID">    <button type="button" class="btn dark btn-outline see"> See Payment Record</button>  </td>
                                <td data-id="@item.ID">    <button type="button" class="btn dark btn-outline add" onclick="addPayment()"> Add Payment </button>  </td>

                            </tr>
                        }


                    </tbody>
                </table>
            </div>
        </div>
        <!-- END EXAMPLE TABLE PORTLET-->




    </div>
</div>

<partial name="partials/_SuccessfulPayment.cshtml" />



<partial name="partials/_AddPayment.cshtml" model="new EventPaymentVM { }" />
@section Scripts {


    <script>
        var a;

        $(document).ready(function () {


            $('tr .see').click(function () {
                a = $(this).closest('tr').attr('data-id');


                $.get('/Payment/FetchRecord', { EventID: a });
            });

            $('tr .add').click(function () {

                a = $(this).closest('tr').attr('data-id');

                $.get('/Payment/AddPayment', { EventID: a });
                $("#addpayment").modal('show');
            });

            $('#records').DataTable({
                order: [[0, 'asc'], [1, 'asc']],
                rowGroup: {
                    dataSrc: [0, 1]
                },
                columnDefs: [{
                    targets: [1, 0],
                    visible: false
                }]
            });
        });


