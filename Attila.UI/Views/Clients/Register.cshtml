@using Attila.Application.Coordinator.Events.Queries

@model EventClientVM

@{
    ViewData["Title"] = "Add Client";
}

@section Scripts{
    <script type="text/javascript">
        function OnSuccess(e) {
            window.location = '/Clients/';
        }

        function OnBegin(e) {
            $('#btnSubmit').prop('disabled', true);
        }

        function OnFailure(e) {
            console.log(e);
            alert("Please enter the correct details!");
            $('#btnSubmit').prop('disabled', false);
        }
    </script>

    <partial name="_ValidationScriptsPartial" />
}

<div class="page-head">
    <div class="page-title">
        <h1>
            Register Client
            <small> </small>
        </h1>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <form asp-controller="Clients"
              asp-action="AddClientDetails"
              data-ajax="true"
              data-ajax-method="POST"
              data-ajax-success="OnSuccess"
              data-ajax-begin="OnBegin"
              data-ajax-failure="OnFailure">

            <div class="portlet light bordered">
                <div class="portlet-title">
                    <div class="caption">
                        <i class="icon-speech font-green"></i>
                        <span class="caption-subject bold font-green uppercase">Client Profile</span>
                    </div>
                    <div class="actions">
                        <button id="btnSubmit" type="submit" class="btn green">Register </button>
                    </div>
                </div>
                <div class="portlet-body">

                    <div class="form-group">
                        <label class="control-label">Name : </label>
                        <input type="text" asp-for="Name" placeholder="John Smith" class="form-control">
                    </div>
                    <div class="form-group">
                        <label class="control-label">E-mail Address</label>
                        <input type="email" asp-for="Email" placeholder="john.smith@gmail.com" class="form-control">
                    </div>
                    <div class="form-group">
                        <label class="control-label">Home Address</label>
                        <input type="text" asp-for="Address" placeholder="Sample St. Sample City" class="form-control">
                    </div>

                    <div class="form-group">
                        <label class="control-label">Mobile Number</label>
                        <input type="tel" asp-for="Contact" placeholder="+63 912345678" class="form-control">
                    </div>
                    <div class="form-group">
                        <label class="control-label">Telephone Number</label>
                        <input type="tel" placeholder="+632  1234 5678 " class="form-control">
                    </div>

                    <div class="form-group">
                        <label class="control-label">Remarks</label>
                        <textarea class="form-control" rows="3" placeholder=""></textarea>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>