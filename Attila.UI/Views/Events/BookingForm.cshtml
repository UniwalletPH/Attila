
@{

    Layout = "~/Views/Shared/_Layout.cshtml";

}

<div class="page-head">
    <!-- BEGIN PAGE TITLE -->
    <div class="page-title">
        <h1>
            Booking Form
            <small> </small>
        </h1>
    </div>
    <!-- END PAGE TITLE -->
    <!-- BEGIN PAGE TOOLBAR -->
    <div class="page-toolbar">

        <!-- BEGIN THEME PANEL -->
        <!-- END THEME PANEL -->
    </div>
    <!-- END PAGE TOOLBAR -->
</div>
<!-- END PAGE HEAD-->
<!-- BEGIN PAGE BREADCRUMB -->
<ul class="page-breadcrumb breadcrumb">
</ul>
<div class="row">
    <div class="col-md-12">
        <!-- Begin: life time stats -->
        <div class="portlet light bordered">

            <div class="portlet-body form">
                <form role="form">
                    <div class="form-body">
                        <div class="form-group">
                            <label>Client Name</label>


                            <select class="form-control">
                                <option>Client 1</option>
                                <option>Client 2</option>
                                <option>Client 3</option>
                                <option>Client 4</option>
                                <option>Client 5</option>
                            </select>
                        </div>
                        <div class="form-group">
                            <label>Type of Occasion </label>
                            <select class="form-control">
                                <option>Baptismal</option>
                                <option>Birthday</option>
                                <option>Christmas Party</option>
                                <option>Meeting </option>
                                <option>Wedding</option>
                            </select>
                        </div>
                        <div class="form-group">
                            <label>Event Name</label>
                            <input type="text" class="form-control" placeholder="">
                        </div>



                        <div class="form-group">
                            <label>Event Theme  | Color </label>
                            <input type="text" class="form-control" placeholder="">
                        </div>

                        <div class="form-group">
                            <label>Event's Place</label>
                            <input type="text" class="form-control" placeholder="">
                        </div>
                        <div class="form-group">
                            <label> Condominium or Building?</label>
                            <div class="mt-checkbox-list">
                                <label class="mt-checkbox mt-checkbox-outline">
                                    Yes
                                    <input type="checkbox" value="1" name="test">
                                    <span></span>
                                </label>
                                <label class="mt-checkbox mt-checkbox-outline">
                                    No
                                    <input type="checkbox" value="1" name="test">
                                    <span></span>
                                </label>

                            </div>
                        </div>
                        <div class="form-group">
                            <label> Location Area</label>
                            <div class="mt-checkbox-list">
                                <label class="mt-checkbox mt-checkbox-outline">
                                    North Area
                                    <input type="checkbox" value="0" name="test">
                                    <span></span>
                                </label>
                                <label class="mt-checkbox mt-checkbox-outline">
                                    South Area
                                    <input type="checkbox" value="1" name="test">
                                    <span></span>
                                </label>

                            </div>
                        </div>
                        <div class="form-group">
                            <label>Event Date</label>
                            <input class="form-control form-control-inline   date-picker" size="16" type="text" value="" />

                        </div>

                        <div class="form-group">
                            <label>Set Up Time </label>
                            <input type="text" value="2:30 PM" data-format="hh:mm A" class="form-control clockface_1" />
                        </div>
                        <div class="form-group">
                            <label>Program Starts At </label>
                            <input type="text" value="2:30 PM" data-format="hh:mm A" class="form-control clockface_1" />
                        </div>

                        <div class="form-group">
                            <label>Serving Time </label>
                            <input type="text" value="2:30 PM" data-format="hh:mm A" class="form-control clockface_1" />
                        </div>


                    </div>


                    <div class="form-group">
                        <label> Buffet Type </label>
                        <div class="mt-checkbox-list">
                            <label class="mt-checkbox mt-checkbox-outline">
                                Manage Buffet
                                <input type="checkbox" value="1" name="test">
                                <span></span>
                            </label>
                            <label class="mt-checkbox mt-checkbox-outline">
                                Self Service
                                <input type="checkbox" value="1" name="test">
                                <span></span>
                            </label>

                        </div>
                    </div>
                    <div class="form-group">
                        <label>Number of Guests</label>
                        <input type="number" min=85 class="form-control" placeholder="">
                    </div>

                    <div class="form-group">
                        <label>Menu Proposal </label>
                        <select class="form-control">
                            <option>400 per head</option>
                            <option>450 per head</option>
                            <option>500 per head</option>
                            <option>600 per head</option>
                            <option>700 per head</option>
                            <option>800 per head</option>
                            <option>900 per head</option>
                            <option>1000 per head</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label class="control-label">Remarks</label>
                        <textarea class="form-control" rows="3" placeholder=""></textarea>
                    </div>




                    <div class="portlet light bordered">
                        <div class="portlet-title">
                            <div class="caption">
                                <span class="caption-subject  font-orange bold uppercase">Terms & Conditions</span>
                            </div>

                        </div>
                        <div class="portlet-body">
                            <div class="well">
                                <h4>Minimum  </h4> of 35, 000 PHP  is required for a Catering Service in South Area, while P 50,000.00 in North Area.
                            </div>
                            <div class="well well-large">
                                <h4>Additional Transportation Fee</h4> (actual cost may vary based on the location on the extent of actual set up).
                            </div>

                            <div class="well">
                                <h4>Final Menu </h4> choices should be 2 weeks before the event date, while 1 week for the final number of attendees.
                            </div>
                            <div class="well well-large">
                                <h4>All catering equipment </h4> (tables, chairs, buffet and dinning set-up) is strictly to be used for Arleneâ€™s Catering Services only.
                            </div>

                            <div class="well">
                                <h4>Additional fee   </h4> for any catering equipment requested by client.
                            </div>
                            <div class="well well-large">
                                <h4>Any loss or damage of catering equipment and centerpieces,</h4>  will be charged to client.
                            </div>

                            <div class="well">
                                <h4>Service Fee for Venue in Condominium or Bldg.  </h4>is 3,500 PHP.
                            </div>
                            <div class="well well-large">
                                <h4>Services are limited  </h4> to 4 hours for lunch and dinner only, 3 hours for cocktails, exclusive of set/up preparations.
                            </div>


                            <div class="well">
                                <h4>Additional P 1,000.00 per Hour </h4>beyond the prior agreed time.
                            </div>
                            <div class="well well-large">
                                <h4>Php 5,000.00 down payment upon signing the booking form,   </h4>remaining balance should be paid on the day of the event
                            </div>
                        </div>
                        <div class="mt-checkbox-list">
                            <label class="mt-checkbox mt-checkbox-outline">
                                I agree to the Terms & Conditions of the management about their services.
                                <input type="checkbox" value="1" name="test">
                                <span></span>
                            </label>


                        </div>


                    </div>
                    <div class="form-actions">
                        <button type="submit" class="btn blue">Submit</button>
                        <button type="button" class="btn default">Cancel</button>
                    </div>

                </form>






            </div>



            </div>
    </div>
    <!-- End: life time stats -->
</div>

@section Scripts{
    <script src="../assets/global/plugins/moment.min.js" type="text/javascript"></script>
    <script src="../assets/global/plugins/bootstrap-daterangepicker/daterangepicker.min.js" type="text/javascript"></script>
    <script src="../assets/global/plugins/bootstrap-datepicker/js/bootstrap-datepicker.min.js" type="text/javascript"></script>
    <script src="../assets/global/plugins/bootstrap-timepicker/js/bootstrap-timepicker.min.js" type="text/javascript"></script>
    <script src="../assets/global/plugins/bootstrap-datetimepicker/js/bootstrap-datetimepicker.min.js" type="text/javascript"></script>
    <script src="../assets/global/plugins/clockface/js/clockface.js" type="text/javascript"></script>
} 