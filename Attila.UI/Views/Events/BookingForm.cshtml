        //}

        //function OnFailure(e) {
        //    console.log(e);
        //    alert("failed!");
        //}

        function OnSuccess(result) { 
                $("#successrequests").modal('show');
             
        }

        function OnFailure(result) {
            alert("Failed!");
            window.location = "/Events/BookingForm";
        }




    </script>
}
