<div class="row">
    <div class="col-md-12">
        <!-- Begin: life time stats -->
        <div class="portlet light bordered">

            <div class="portlet-body form">
                <form role="form" asp-controller="Events" asp-action="AddEvent" data-ajax="true" data-ajax-method="post" data-ajax-success="OnSuccess" data-ajax-failure="OnFailure">
                    <div class="form-body">
                        <div class="form-group">
                            <div class="form-group">
                                <label>Event Name</label>

                                <input type="text" class="form-control details" asp-for="EventDetails.EventName" placeholder="" readonly>
                            </div>
                            <label>Client Name</label>

                            <input type="text" class="form-control details" asp-for="EventDetails.Client.Name" placeholder="" readonly>

                        </div>
                        <div class="form-group">
                            <label>Type of Occasion </label>

                            <input type="text" class="form-control details" asp-for="EventDetails.Type" placeholder="" readonly>
                         
                        </div>

                       
                        <div class="form-group">
                            <label>Event Theme  | Color</label>
                            <input type="text" class="form-control details" placeholder="Mermaid /Aqua " asp-for="EventDetails.Theme" readonly> 
                        </div>
                        <div class="form-group">
                            <label>Event Description</label>

                            <input type="text" class="form-control details" placeholder="Description" asp-for="EventDetails.Description" readonly> 
                        </div>

                        <div class="form-group">
                            <label>Event's Place</label>

                            <input type="text" class="form-control details" asp-for="EventDetails.Location" readonly>
                                </div>
                        <div class="form-group">
                            <label>Venue in Condominium or Building?</label>

                            <input type="text" class="form-control details" asp-for="EventDetails.VenueType" readonly>
                            
                        </div>
                        <div class="form-group">
                            <label>Type of Location</label>

                            <input type="text" class="form-control details" asp-for="EventDetails.LocationType" readonly>
                          
                        </div>
                        <div class="form-group">
                            <label>Event Date</label>

                            <input type="text" class="form-control details" asp-for="EventDetails.EventDate" readonly>
                          </div>

                        <div class="form-group">
                            <label>Set Up Time </label>

                            <input type="text" class="form-control details" asp-for="EventDetails.EntryTime" readonly> 
                        </div>
                        <div class="form-group">
                            <label>Program Starts At </label>

                            <input type="text" class="form-control details" asp-for="EventDetails.ProgramStart" readonly> 
                        </div>

                        <div class="form-group">
                            <label>Serving Time </label>

                            <input type="text" class="form-control details" asp-for="EventDetails.ServingTime" readonly> 
                        </div>


                    </div>

                    <div class="form-group">
                        <label>Buffet Type </label>

                        <input type="text" class="form-control details" asp-for="EventDetails.ServingType" readonly> 
                    </div>
                    <div class="form-group">
                        <label>Number of Guests</label>

                        <input type="text" class="form-control details" asp-for="EventDetails.NumberOfGuests" readonly> 
                    </div>

                    <div class="form-group">
                        <label>Package </label>

                        <input type="text" class="form-control details" asp-for="EventDetails.Package.Name" readonly> 
                    </div>
                    <div class="form-group">
                        <label class="control-label">Remarks</label>

                        <textarea class="form-control details" asp-for="EventDetails.Remarks" readonly> </textarea> 
                    </div>
                    @if (Model.EventDetails.EventStatus.ToString() == "Approved")
                    {
                        if (User.IsInRole("Admin"))
                        {

                            <label>Payment  </label>
                            <input type="number" class="form-control" placeholder="" readonly>
                              
                        }
                    }



                    @if (Model.EventDetails.EventStatus.ToString() != "Approved")
                    {

                        if (User.IsInRole("Coordinator"))
                        {
                            <button type="button" id="btnEdit" class="btn blue"> Edit</button>


                            
                        }
                        if (User.IsInRole("Admin"))
                        {




                            <button type="button" id="btnSubmit" class="btn blue"> Approve</button>
                            <button type="button" id="btnDecline" class="btn blue">Reject</button>
                        }
                    }




                </form>






            </div>



        </div>
    </div>
</div>



