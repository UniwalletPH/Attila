@section Scripts {

    <script>

        $('document').ready(function () {
            $('#btnSubmit').on('click', function () {

                var _deleteId = $('#txtDeleteId').val();

                $.post('/InventoryManager/DeleteFoodDetailsCommand', { deleteID: _deleteId }).done(function (data) { InputResult(data) });


            });
        });

        function InputResult(result) {
            if (result == true) {
                alert("Food successfully deleted!");
                window.location = "/InventoryManager/Index";
            }
            else {
                alert("Failed!");
                window.location = "/InventoryManager/DeleteFoodDetailsCommand";
            }
        }

    </script>
