@model Attila.UI.Models.EquipmentDetailsVM

@{
    ViewData["Title"] = "AddEquipmentDetails";
}

<h1>Add Equipment Details</h1>

<hr />

<form class="form-group" asp-action="AddEquipmentDetails" asp-controller="InventoryManager" data-ajax="true" data-ajax-method="post" data-ajax-success="OnSuccess">
    <div class="row">
        <div class="col-md-4">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Code" class="control-label">Code: </label>
                <input asp-for="Code" class="form-control" type="text" />
                <span asp-validation-for="Code" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Name" class="control-label">Name: </label>
                <input id="txtName" asp-for="Name" class="form-control" type="text" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label">Description: </label>
                <input id="txtDescription" asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UnitType" class="control-label">Unit Type: </label>
                <select id="txtUnitType" asp-for="UnitType" class="form-control">
                    <option value=""> -- select an option -- </option>
                    <option value="1">Piece</option>
                    <option value="2">Box</option>
                    <option value="3">Dozen</option>
                    <option value="4">Others</option>
                </select>
                <span asp-validation-for="UnitType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EquipmentType" class="control-label">Equipment Type: </label>
                <select id="txtEquipmentType" asp-for="EquipmentType" class="form-control">
                    <option value=""> -- select an option -- </option>
                    <option value="1">Consumable</option>
                    <option value="2">Non-consumable</option>
                    <option value="3">Others</option>
                </select>
                <span asp-validation-for="EquipmentType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <button type="submit" id="btnSubmit" class="btn btn-primary">Submit</button>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    <script type="text/javascript">
        function OnSuccess(result) {
            if (result == true) {
                alert("Equipment details successfully added!");
                window.location = "/InventoryManager/Index";
            }

            else {
                alert("Failed!");
                window.location = "/InventoryManager/AddEquipmentDetails";
            }
        }
    </script>

    <partial name="_ValidationScriptsPartial" />
}