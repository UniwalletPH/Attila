@model Attila.UI.Models.EquipmentInventoryVM

@{
    ViewData["Title"] = "UpdateEquipmentStock";
}

<h1>Update Equipment Stock Command</h1>

<hr />
<form class="form-group" asp-action="UpdateEquipmentStock" asp-controller="InventoryManager" data-ajax="true" data-ajax-method="post" data-ajax-success="OnSuccess">
    <div class="row">
        <div class="col-md-4">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ID" class="control-label">Equipment ID:</label>
                @Html.DropDownListFor(a => a.ID, Model.EquipmentDetailsList, "Select Equipment ID", new { @class = "form-control" })
                <span asp-validation-for="ID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Quantity" class="control-label">Quantity: </label>
                <input id="txtQuantity" asp-for="Quantity" class="form-control" />
                <span asp-validation-for="Quantity" class="text-danger"></span>
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-primary">Submit</button>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    <script type="text/javascript">
        function OnSuccess(result) {
            if (result == true) {
                alert("Equipment inventory successfully updated!");
                window.location = "/InventoryManager/Index";
            }

            else {
                alert("Equipment Restock ID does not exist!!");
                window.location = "/InventoryManager/UpdateEquipmentStock";
            }
        }
    </script>

    <partial name="_ValidationScriptsPartial" />
}