@model Attila.UI.Models.FoodRestockRequestVM

@{
    ViewData["Title"] = "RequestFoodRestockCommand";
}

<h1>RequestFoodRestockCommand</h1>

<h4>FoodRestockRequest</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        @*<div class="form-group">
                <label asp-for="ID" class="control-label"></label>
                <input asp-for="ID" class="form-control" />
                <span asp-validation-for="ID" class="text-danger"></span>
            </div>*@
        <div class="form-group">
            <label asp-for="FoodDetailsID" class="control-label">Food Details ID: </label>
            <input id="FoodDetailsID" asp-for="FoodDetailsID" class="form-control" />
            <span asp-validation-for="FoodDetailsID" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Quantity" class="control-label">Quantity</label>
            <input id="txtQuantity" asp-for="Quantity" class="form-control" />
            <span asp-validation-for="Quantity" class="text-danger"></span>
        </div>
        @*<div class="form-group">
                <label asp-for="DateTimeRequest" class="control-label"></label>
                <input asp-for="DateTimeRequest" class="form-control" />
                <span asp-validation-for="DateTimeRequest" class="text-danger"></span>
            </div>*@

        <div class="form-group">
            <label asp-for="Status" class="control-label">Status: </label>
            <select id="txtStatus" asp-for="Status" class="form-control">
                <option value="0"> -- select an option -- </option>
                <option value="1">Pending</option>
                <option value="2">Approved</option>
                <option value="3">Declined</option>
            </select>
            <span asp-validation-for="Status" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="UserID" class="control-label">User ID: </label>
            <input id="UserID" asp-for="UserID" class="form-control" />
            <span asp-validation-for="UserID" class="text-danger"></span>
        </div>
        <div class="form-group">
            <button id="btnSubmit" class="btn btn-primary">Submit</button>
        </div>
    </div>
</div>

@section Scripts {

    <script>
        $('document').ready(function () {
            $('#btnSubmit').on('click', function () {
                alert("test");
                var _foodDetailsID = $('#FoodDetailsID').val();
                var _quantity = $('#txtQuantity').val();
                var _status = $('#txtStatus').val();
                var _userID = $('#UserID').val();


                var _foodRestockRequest =
                {
                    FoodDetailsID: _foodDetailsID,
                    Quantity: _quantity,
                    Status: _status,
                    UserID: _userID
                };


                $.post('/InventoryManager/RequestFoodRestockCommand', { foodRestockRequest: _foodRestockRequest }).done(function (data) { InputResult(data) });
            });
        });

        function InputResult(result) {
            if (result == true) {
                alert("Food restock successfully requested!");
                window.location = "/InventoryManager/Index";
            }
            else {
                alert("Failed!");
                window.location = "/InventoryManager/RequestFoodRestockCommand";
            }
        }
    </script>
}
