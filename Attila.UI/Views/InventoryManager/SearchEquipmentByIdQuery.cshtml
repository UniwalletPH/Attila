@model Attila.Application.Inventory_Manager.Equipment.Queries.EquipmentDetailsVM

@{
    ViewData["Title"] = "SearchEquipmentByIdQuery";
}

<h1>Search Equipment By Id</h1>

<div class="row">
    <div class="col-md-4">
        <label class="control-label">Enter equipment ID: </label>
        <input id="txtSearchID" class="form-control" />
        <br />
        <button id="btnSubmit" class="btn btn-primary">Submit</button>
    </div>
</div>
<br />

<hr />
<br />
<dl class="row">
    <dt class="col-sm-2">
        @Html.DisplayName("ID: ")
    </dt>
    <dd class="col-sm-10">
        <input id="ID" readonly>
    </dd>
    <dt class="col-sm-2">
        @Html.DisplayName("Code: ")
    </dt>
    <dd class="col-sm-10">
        <input id="code" readonly>
    </dd>
    <dt class="col-sm-2">
        @Html.DisplayName("Name :")
    </dt>
    <dd class="col-sm-10">
        <input id="name" readonly>
    </dd>
    <dt class="col-sm-2">
        @Html.DisplayName("Description: ")
    </dt>
    <dd class="col-sm-10">
        <input id="description" readonly>
    </dd>
    <dt class="col-sm-2">
        @Html.DisplayName("Unit Type: ")
    </dt>
    <dd class="col-sm-10">
        <input id="unitType" readonly>
    </dd>
    <dt class="col-sm-2">
        @Html.DisplayName("Equipment Type: ")
    </dt>
    <dd class="col-sm-10">
        <input id="equipmentType" readonly>
    </dd>
</dl>



@section Scripts {

    <script>

        $('document').ready(function () {
            $('#btnSubmit').on('click', function () {
                var _searchID = $('#txtSearchID').val();


                $.post('/InventoryManager/SearchEquipmentByIdQuery', { searchedID: _searchID })
                    .done(function (result) {

                        alert("Equipment ID successfully searched!");
                        $("#ID").val(result.id);
                        $("#code").val(result.code);
                        $("#name").val(result.name);
                        $("#description").val(result.description);
                        $("#unitType").val(result.unitType);
                        $("#equipmentType").val(result.equipmentType);

                        $("#txtSearchID").val("");

                    })
                    .fail(function (error) {
                        alert("Equipment ID does not exist!")
                    });
            });

        });

    </script>
}