@section Scripts {
    <script>
        $('document').ready(function () {
            $('#btnSubmit').on('click', function () {

                var _id = $('#txtID').val();
                var _quantity = $('#txtQuantity').val();


                var _foodInventory =
                {
                    ID: _id,
                    Quantity: _quantity
                };

                $.post('/InventoryManager/UpdateFoodStockCommand', { foodInventory: _foodInventory }).done(function (data) { InputResult(data) });
            });
        });

        function InputResult(result) {
            if (result == true) {
                alert("Equipment inventory successfully updated!");
                window.location = "/InventoryManager/Index";
            }
            else {
                alert("Failed!");
                window.location = "/InventoryManager/UpdateFoodStockCommand";
            }
        }
    </script>
}