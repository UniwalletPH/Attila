@model Attila.Application.Inventory_Manager.Food.Queries.FoodDetailsVM

@{
    ViewData["Title"] = "SearchFoodByIdQuery";
}

<h1>Search Food By Id</h1>


<div class="row">
    <div class="col-md-4">
        <label class="control-label">Enter food ID: </label>
        <input id="txtSearchID" class="form-control" />
        <br />
        <button id="btnSubmit" class="btn btn-primary">Submit</button>
    </div>
</div>
<br />

<hr />
<br />
<dl class="row">
    <dt class="col-sm-2">
        @Html.DisplayName("ID: ")
    </dt>
    <dd class="col-sm-10">
        <input id="ID" readonly>
    </dd>
    <dt class="col-sm-2">
        @Html.DisplayName("Code: ")
    </dt>
    <dd class="col-sm-10">
        <input id="code" readonly>
    </dd>
    <dt class="col-sm-2">
        @Html.DisplayName("Name :")
    </dt>
    <dd class="col-sm-10">
        <input id="name" readonly>
    </dd>
    <dt class="col-sm-2">
        @Html.DisplayName("Specification: ")
    </dt>
    <dd class="col-sm-10">
        <input id="speficiation" readonly>
    </dd>
    <dt class="col-sm-2">
        @Html.DisplayName("Description: ")
    </dt>
    <dd class="col-sm-10">
        <input id="description" readonly>
    </dd>
    <dt class="col-sm-2">
        @Html.DisplayName("Unit Type: ")
    </dt>
    <dd class="col-sm-10">
        <input id="unitType" readonly>
    </dd>
    <dt class="col-sm-2">
        @Html.DisplayName("Food Type: ")
    </dt>
    <dd class="col-sm-10">
        <input id="foodType" readonly>
    </dd>
</dl>



@section Scripts {

    <script>

        $('document').ready(function () {
            $('#btnSubmit').on('click', function () {

                if ($('#txtSearchID').val()) {

                    var _searchID = $('#txtSearchID').val();

                    $.post('/InventoryManager/SearchFoodByIDQuery', { searchedID: _searchID })
                        .done(function (result) {

                            alert("Food ID successfully searched!");
                            $("#ID").val(result.id);
                            $("#code").val(result.code);
                            $("#name").val(result.name);
                            $("#speficiation").val(result.specification);
                            $("#description").val(result.description);
                            $("#unitType").val(result.unit);
                            $("#foodType").val(result.foodType);

                            $("#txtSearchID").val("");

                        })
                        .fail(function (error) {
                            alert("Food ID does not exist!")
                            $("#txtSearchID").val("");
                            $("#ID").val("");
                            $("#code").val("");
                            $("#name").val("");
                            $("#speficiation").val("");
                            $("#description").val("");
                            $("#unitType").val("");
                            $("#foodType").val("");
                        });

                }

                else {
                    alert("Please fill in all the details.");
                    $("#txtSearchID").val("");
                    $("#ID").val("");
                    $("#code").val("");
                    $("#name").val("");
                    $("#speficiation").val("");
                    $("#description").val("");
                    $("#unitType").val("");
                    $("#foodType").val("");
                }

            });
        });



    </script>
}


