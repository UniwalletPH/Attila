    </tr>

    <tr>
        <td>
            <button id="btnAddEquipmentInventory" class="btn btn-primary">ADD EQUIPMENT INVENTORY</button>
            <button id="btnAddFoodInventory" class="btn btn-primary">ADD FOOD INVENTORY</button>
            <br />
            <br />
        </td>
    </tr>
    <tr>
        <td>
            <button id="btnAddEquipmentRestock" class="btn btn-primary">ADD EQUIPMENT RESTOCK</button>
            <button id="btnAddFoodRestock" class="btn btn-primary">ADD FOOD RESTOCK</button>
            <br />
            <br />

        </td>
    </tr>
    <tr>
        <td>
            <button id="btnDeleteEquipment" class="btn btn-primary">DELETE EQUIPMENT</button>
