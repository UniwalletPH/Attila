            <br />
        </td>
    </tr>
    <tr>
        <td>
            <button id="btnRequestEquipmentRestock" class="btn btn-primary">REQUEST EQUIPMENT RESTOCK</button>
            <button id="btnRequestFoodRestock" class="btn btn-primary">REQUEST FOOD RESTOCK</button>
            <br />
            <br />
        </td>
    </tr>
    <tr>
        <td>
            <button id="btnUpdateEquipmentDetails" class="btn btn-primary">UPDATE EQUIPMENT DETAILS</button>
            <button id="btnUpdateFoodDetails" class="btn btn-primary">UPDATE FOOD DETAILS</button>
            <br />
            <br />
        </td>
    </tr>
    <tr>
        <td>
            <button id="btnUpdateEquipmentStock" class="btn btn-primary">UPDATE EQUIPMENT STOCK</button>
            <button id="btnUpdateFoodStock" class="btn btn-primary">UPDATE FOOD STOCK</button>
            <br />
            <br />
        </td>
    </tr>
    <tr>
        <td>
            <button id="btnViewEquipmentDetails" class="btn btn-primary">VIEW  EQUIPMENT DETAILS</button>
            <button id="btnViewFoodDetails" class="btn btn-primary">VIEW  FOOD DETAILS</button>
            <br />
            <br />
        </td>
    </tr>
    <tr>
        <td>
            <button id="btnViewEquipmentStock" class="btn btn-primary">VIEW EQUIPMENT STOCK</button>
            <button id="btnViewFoodStock" class="btn btn-primary">VIEW FOOD STOCK</button>
