@{
    ViewData["Title"] = "Packages";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model PackagesVM

@section Styles{
    <link href="../assets/global/plugins/datatables/datatables.min.css" rel="stylesheet" type="text/css" />
    <link href="../assets/global/plugins/datatables/plugins/bootstrap/datatables.bootstrap.css" rel="stylesheet" type="text/css" />
}
<div class="page-head">
    <!-- BEGIN PAGE TITLE -->
    <div class="page-title">
        <h1>
            Event Packages
            <small> </small>
        </h1>
    </div>
    <!-- END PAGE TITLE -->
    <!-- BEGIN PAGE TOOLBAR -->
    <div class="page-toolbar">

        <!-- BEGIN THEME PANEL -->
        <!-- END THEME PANEL -->
    </div>
    <!-- END PAGE TOOLBAR -->
</div>
<!-- END PAGE HEAD-->
<!-- BEGIN PAGE BREADCRUMB -->
<ul class="page-breadcrumb breadcrumb">
</ul>
<div class="row">

    <div class="col-md-12">
        <!-- BEGIN EXAMPLE TABLE PORTLET-->
        <div class="portlet light bordered">
            <div class="portlet-title">


            </div>
            <div class="portlet-body">
                <div class="table-toolbar">
                    <div class="row">
                        <div class="col-md-6">


                            <div class="caption">

                                <button id="sample_editable_1_new" class="btn sbold green " onClick="AddPackageMenu()">
                                    Add New Menu in the Package
                                </button>
                                <button id="sample_editable_1_new" class="btn sbold green " onClick="AddPackage()">
                                    Add New Package
                                </button>
                                <button id="sample_editable_1_new" class="btn sbold green " onclick="location.href='@Url.Action("MenuList", "Packages")'">
                                    Go to Menu List
                                </button>
                            </div>

                        </div>
                        <div class="col-md-6">
                            <div class="btn-group pull-right">
                                <button class="btn green  btn-outline dropdown-toggle" data-toggle="dropdown">
                                    Tools
                                    <i class="fa fa-angle-down"></i>
                                </button>
                                <ul class="dropdown-menu pull-right">
                                    <li>
                                        <a href="javascript:;">
                                            <i class="fa fa-print"></i> Print
                                        </a>
                                    </li>
                                    <li>
                                        <a href="javascript:;">
                                            <i class="fa fa-file-pdf-o"></i> Save as PDF
                                        </a>
                                    </li>
                                    <li>
                                        <a href="javascript:;">
                                            <i class="fa fa-file-excel-o"></i> Export to Excel
                                        </a>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>

                <table class="table table-striped table-bordered table-hover   order-column packages" id="sample_1">


                    <thead>
                        <tr>

                            <th> Code </th>
                            <th> Name </th>
                            <th> Description </th>
                            <th> Rate Per Head </th>
                        </tr>
                    </thead>

                    <tbody>
                        @foreach (var item in Model.EventPackages)
                        {
                            <tr class="odd gradeX" data-id="@item.ID">
                                <td>@item.Code</td>
                                <td>@item.Name</td>
                                <td>@item.Description</td>
                                <td>@item.RatePerHead</td>
                            </tr>
                        }

                    </tbody>

                </table>
            </div>
        </div>
        <!-- END EXAMPLE TABLE PORTLET-->




    </div>
</div>

<partial name="partials/_SuccessfulPackage" />
 
<partial name="partials/_SuccessfulPackage" model="new PackagesVM { }" />
<partial name="partials/PackageMenuForm" model="new AddPackageMenuVM { MenuList = Model.MenuList , PackageList = Model.PackageList }" />
<partial name="partials/PackageForm" model=" new Attila.Application.Coordinator.Event.Queries.EventPackageVM {}" />

<partial name="partials/_SuccessfulPackageMenu" />
@section Scripts {

    <script type="text/javascript">
        function OnSuccessPackage(e) {
            $("#successpackage").modal('show');
            $('#packageform').modal('toggle');

        }
        function OnFailurePackage(e) {
            alert("failed!");
        }
        function AddPackage() {
            $.get('/Packages/PackageForm');
        }

        $(document).ready(function () {
            $('.packages tr').click(function () {
                var _id = $(this).data("id");
                a = _id;
                 
                $.get('/Packages/Details', { PackageID: _id });
            });
        });


        function OnFailurePackageMenu(e) {
            console.log(e);
            alert("failed!");
        }
        function AddPackageMenu() {
            $("#packagemenuform").modal('show');
            $.get('/Packages/PackageMenuForm');
        }
        function OnSuccessPackageMenu(e) {
            $("#successpackagemenu").modal('show');

            $('#packagemenuform').modal('toggle');

        }
    </script>





    <script src="../assets/global/scripts/datatable.js" type="text/javascript"></script>
    <script src="../assets/global/plugins/datatables/datatables.min.js" type="text/javascript"></script>
    <script src="../assets/global/plugins/datatables/plugins/bootstrap/datatables.bootstrap.js" type="text/javascript"></script>
    <!-- END PAGE LEVEL PLUGINS -->
    <!-- BEGIN THEME GLOBAL SCRIPTS -->
    <script src="../assets/global/scripts/app.min.js" type="text/javascript"></script>
    <!-- END THEME GLOBAL SCRIPTS -->
    <!-- BEGIN PAGE LEVEL SCRIPTS -->
    <script src="../assets/pages/scripts/table-datatables-managed.min.js" type="text/javascript"></script>


}