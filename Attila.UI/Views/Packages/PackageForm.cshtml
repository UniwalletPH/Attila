@model Attila.Application.Coordinator.Event.Queries.EventPackageVM

@{

    Layout = "~/Views/Shared/_Layout.cshtml";

}

<div class="page-head">
    <!-- BEGIN PAGE TITLE -->
    <div class="page-title">
        <h1>
            Package Form
            <small> </small>
        </h1>
    </div>
    <!-- END PAGE TITLE -->
    <!-- BEGIN PAGE TOOLBAR -->
    <div class="page-toolbar">

        <!-- BEGIN THEME PANEL -->
        <!-- END THEME PANEL -->
    </div>
    <!-- END PAGE TOOLBAR -->
</div>
<!-- END PAGE HEAD-->
<!-- BEGIN PAGE BREADCRUMB -->
<ul class="page-breadcrumb breadcrumb">
</ul>
<div class="row">s
        <!-- Begin: life time stats -->
        <div class="portlet light bordered">

            <div class="portlet-body form">
                <form role="form" asp-controller="Events" asp-action="AddEventPackage" data-ajax="true" data-ajax-method="post" data-ajax-success="OnSuccess" data-ajax-failure="OnFailure">
                    <div class="form-body">



                        <div class="form-group">
                            <label>Package Code</label>
                            <input type="text" class="form-control" placeholder="" asp-for="Code">
                        </div>

                        <div class="form-group">
                            <label>Package Name</label>
                            <input type="text" class="form-control" placeholder="" asp-for="Name">
                        </div>

                        <div class="form-group">
                            <label>Description</label>
                            <input type="text" class="form-control" asp-for="Description" placeholder="">
                        </div>
                        <div class="form-group">
                            <label>Rate Per Head</label>
                            <input type="number" class="form-control" asp-for="RatePerHead" placeholder="">
                        </div>
                     

                    </div>
 
                 
                    <div class="form-actions">
                        <button type="submit" id="btnSubmit" class="btn blue">Submit</button>
                        <button type="button" class="btn default">Cancel</button>
                    </div>

                </form>






            </div>



        </div>
    </div>
    <!-- End: life time stats 

@section Scripts{
    <script src="../assets/global/plugins/moment.min.js" type="text/javascript"></script>
    <script src="../assets/global/plugins/bootstrap-daterangepicker/daterangepicker.min.js" type="text/javascript"></script>
    <script src="../assets/global/plugins/bootstrap-datepicker/js/bootstrap-datepicker.min.js" type="text/javascript"></script>
    <script src="../assets/global/plugins/bootstrap-timepicker/js/bootstrap-timepicker.min.js" type="text/javascript"></script>
    <script src="../assets/global/plugins/bootstrap-datetimepicker/js/bootstrap-datetimepicker.min.js" type="text/javascript"></script>
    <script src="../assets/global/plugins/clockface/js/clockface.js" type="text/javascript"></script>

    <script type="text/javascript">
        function OnSuccess(e) {
                  $("#successpackage").modal('show');  
        }

        function OnFailure(e) {
            console.log(e);
            alert("failed!");
        }

    </script>
    <partial name="partials/_SuccessfulRequest" />
}
