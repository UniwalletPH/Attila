@model AddPackageMenuVM

@{

    ViewData["Title"] = "Package Menu Form";
}



<div class="modal fade" id="packagemenuform" tabindex="-1" role="basic" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <form role="form" asp-controller="Packages" asp-action="AddPackageMenu" data-ajax="true" data-ajax-method="post" data-ajax-success="OnSuccessPackageMenu" data-ajax-failure="OnFailurePackageMenu">

                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
                    <h4 class="modal-title">Add Menu in Package Form</h4>
                </div>
                <div class="modal-body">

                    <div class="form-body">
                        <div class="form-group">
                            <label>Package</label>
                            @Html.DropDownListFor(m => m.SelectedPackage, Model.PackageList ?? new List<SelectListItem>(), "--SELECT PACKAGE--", new { @class = "form-control" })

                        </div>

                        <div class="form-group">
                            <label>Menu Name</label>
                            @Html.DropDownListFor(m => m.SelectedMenu, Model.MenuList ?? new List<SelectListItem>(), "--SELECT MENU--", new { @class = "form-control" })

                        </div>
                    </div>



                </div>
                <div class="modal-footer">
                    <div class="form-actions">
                        <button type="submit" class="btn blue">Submit</button>
                        <button type="button" class="btn default" data-dismiss="modal">Cancel</button>
                    </div>
                </div>

            </form>
        </div>
        <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
</div>
