@model AddMenuVM

@{
    
    ViewData["Title"] = "Menu Form"; 

}
    <div class="modal fade" id="menuform" tabindex="-1" role="basic" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <form role="form" asp-controller="Packages" asp-action="AddMenu" data-ajax="true" data-ajax-method="post" data-ajax-success="OnSuccessMenu" data-ajax-failure="OnFailureMenu">

                    <div class="modal-header">
                        <button type="button" class="close" onclick="location.href='@Url.Action("Index", "Packages")'" data-dismiss="modal" aria-hidden="true"></button>
                        <h4 class="modal-title">Menu Form</h4>
                    </div>
                    <div class="modal-body">

                        <div class="form-body">
                            <div class="form-group">
                                <label>Category Name</label>
                                @Html.DropDownListFor(m => m.Selected, Model.CategoryList ?? new List<SelectListItem>(),"--SELECT CATEGORY--", new { @class = "form-control" })
                            </div>

                            <div class="form-group">
                                <label>Name</label>
                                <input type="text" class="form-control" placeholder="" asp-for="Menu.Name">
                            </div>
                            <div class="form-group">
                                <label>Description</label>
                                <input type="text" class="form-control" placeholder="" asp-for="Menu.Description">
                            </div>
                        </div>




                    </div>
                    <div class="modal-footer">
                        <div class="form-actions">
                            <button type="submit" class="btn blue">Submit</button>
                            <button type="button" class="btn default" data-dismiss="modal">Cancel</button>
                        </div>
                    </div>

                </form>
            </div>
            <!-- /.modal-content -->
        </div>
        <!-- /.modal-dialog -->
    </div>
 