@model Attila.UI.Models.AddEventVM

@{
    ViewData["Title"] = "UpdateEvent";
}

<h1>UpdateEvent</h1>

<h4>EventDetailsVM</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-controller="Coordinator" asp-action="UpdateEvent" data-ajax="true" data-ajax-method="post" data-ajax-success="OnSuccess" data-ajax-failure="OnFailure">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Event.ID" class="control-label"></label>
                <input asp-for="Event.ID" id="txtId" class="form-control" />
                <span asp-validation-for="Event.ID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Event.Code" class="control-label"></label>
                <input asp-for="Event.Code" id="txtCode" class="form-control" />
                <span asp-validation-for="Event.Code" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Event.EventName" class="control-label"></label>
                <input asp-for="Event.EventName" id="txtEventName" class="form-control" />
                <span asp-validation-for="Event.EventName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Event.Type" class="control-label"></label>
                <select id="txtType" asp-for="Event.Type" class="form-control">
                    <option value="0">--please select a type--</option>
                    <option value="1">Wedding</option>
                    <option value="2">Birthday</option>
                    <option value="3">Others</option>
                    <option value="4">Graduation</option>
                </select>
                <span asp-validation-for="Event.Type" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Event.Address" class="control-label"></label>
                <input asp-for="Event.Address" id="txtAddress" class="form-control" />
                <span asp-validation-for="Event.Address" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Event.BookingDate" class="control-label"></label>
                <input asp-for="Event.BookingDate" id="txtBookingDate" class="form-control" />
                <span asp-validation-for="Event.BookingDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Event.EventDate" class="control-label"></label>
                <input asp-for="Event.EventDate" id="txtEventDate" class="form-control" />
                <span asp-validation-for="Event.EventDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Event.Description" class="control-label"></label>
                <input asp-for="Event.Description" id="txtDesc" class="form-control" />
                <span asp-validation-for="Event.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Event.Location" class="control-label"></label>
                <input asp-for="Event.Location" id="txtLocation" class="form-control" />
                <span asp-validation-for="Event.Location" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Event.Remarks" class="control-label"></label>
                <input asp-for="Event.Remarks" id="txtRemarks" class="form-control" />
                <span asp-validation-for="Event.Remarks" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Event.EventClientID" class="control-label"></label>
                <input asp-for="Event.EventClientID" id="txtEventClientId" class="form-control" />
                <span asp-validation-for="Event.EventClientID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <button type="submit" id="btnSubmit" class="btn btn-primary">Update</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script type="text/javascript">
        function OnSuccess(e) {
            console.log(e);
            alert("Event updated successfully!");
            window.location = '/Coordinator/Index';
        }

        function OnFailure(e) {
            console.log(e);
            alert("Please enter the correct details!");
        }

    </script>
    <partial name="_ValidationScriptsPartial" />
}


