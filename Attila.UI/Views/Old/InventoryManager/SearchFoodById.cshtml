@model Attila.UI.Models.FoodDetailsVM

@{
    ViewData["Title"] = "SearchFoodById";
}

<h1>Search Food By Id</h1>

<form class="form-group" asp-action="SearchFoodById" asp-controller="InventoryManager" data-ajax="true" data-ajax-method="post" data-ajax-success="OnSuccess" data-ajax-failure="OnFailure">
    <div class="row">
        <div class="col-md-4">
            <label class="control-label">Enter food ID: </label>
            <input asp-for="ID" id="txtSearchID" class="form-control" />
            <br />
            <button type="submit" id="btnSubmit" class="btn btn-primary">Submit</button>
        </div>
    </div>
</form>
<br />

<hr />
<br />
<dl class="row">
    <dt class="col-sm-2">
        @Html.DisplayName("ID: ")
    </dt>
    <dd class="col-sm-10">
        <input id="ID" readonly>
    </dd>
    <dt class="col-sm-2">
        @Html.DisplayName("Code: ")
    </dt>
    <dd class="col-sm-10">
        <input id="code" readonly>
    </dd>
    <dt class="col-sm-2">
        @Html.DisplayName("Name :")
    </dt>
    <dd class="col-sm-10">
        <input id="name" readonly>
    </dd>
    <dt class="col-sm-2">
        @Html.DisplayName("Specification: ")
    </dt>
    <dd class="col-sm-10">
        <input id="speficiation" readonly>
    </dd>
    <dt class="col-sm-2">
        @Html.DisplayName("Description: ")
    </dt>
    <dd class="col-sm-10">
        <input id="description" readonly>
    </dd>
    <dt class="col-sm-2">
        @Html.DisplayName("Unit Type: ")
    </dt>
    <dd class="col-sm-10">
        <input id="unitType" readonly>
    </dd>
    <dt class="col-sm-2">
        @Html.DisplayName("Food Type: ")
    </dt>
    <dd class="col-sm-10">
        <input id="foodType" readonly>
    </dd>
</dl>

@section Scripts {
    <script type="text/javascript">
        function OnSuccess(result) {
            alert("Food ID successfully searched!");
            $("#ID").val(result.id);
            $("#code").val(result.code);
            $("#name").val(result.name);
            $("#speficiation").val(result.specification);
            $("#description").val(result.description);
            $("#unitType").val(result.unit);
            $("#foodType").val(result.foodType);

            $("#txtSearchID").val("");

        }

        function OnFailure() {

            alert("Food ID does not exist!")
            $("#txtSearchID").val("");
            $("#ID").val("");
            $("#code").val("");
            $("#name").val("");
            $("#speficiation").val("");
            $("#description").val("");
            $("#unitType").val("");
            $("#foodType").val("");
        }
    </script>

    <partial name="_ValidationScriptsPartial" />
}
