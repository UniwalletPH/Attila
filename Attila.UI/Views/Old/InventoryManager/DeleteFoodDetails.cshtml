@model Attila.UI.Models.FoodDetailsVM

@{
    ViewData["Title"] = "DeleteFoodDetails";
}

<h1>Delete Food</h1>
<hr />
<form class="form-group" asp-action="DeleteFoodDetails" asp-controller="InventoryManager" data-ajax="true" data-ajax-method="post" data-ajax-success="OnSuccess">
    <div class="row">
        <div class="col-md-4">
            <label class="control-label">Enter food ID: </label>
            <input asp-for="ID" class="form-control" />
            <br />
            <button id="btnSubmit" class="btn btn-primary">Submit</button>
        </div>
    </div>
    <br />
    <br />
</form>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayName("ID ")
            </th>
            <th>
                @Html.DisplayName("Code")
            </th>
            <th>
                @Html.DisplayName("Name")
            </th>
            <th>
                @Html.DisplayName("Specification")
            </th>
            <th>
                @Html.DisplayName("Description")
            </th>
            <th>
                @Html.DisplayName("Unit Type")
            </th>
            <th>
                @Html.DisplayName("Food Type")
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.FoodDetailsVMs)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Code)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Specification)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Unit)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FoodType)
                </td>
            </tr>
        }
    </tbody>
</table>

@section Scripts {
    <script type="text/javascript">
        function OnSuccess(result) {
            if (result == true) {
                alert("Food successfully deleted!");
                window.location = "/InventoryManager/Index";
            }

            else {
                alert("Failed!");
                window.location = "/InventoryManager/DeleteFoodDetails";
            }
        }
    </script>

    <partial name="_ValidationScriptsPartial" />
}
