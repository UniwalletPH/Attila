@model Attila.UI.Models.EventClientVM

@{
    ViewData["Title"] = "UpdateClientDetails";
}

<h1>UpdateClientDetails</h1>

<h4>EventClientVM</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <div>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Firstname" class="control-label"></label>
                <input asp-for="Firstname" id="txtFirstName" class="form-control" />
                <span asp-validation-for="Firstname" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Lastname" class="control-label"></label>
                <input asp-for="Lastname" id="txtLastName" class="form-control" />
                <span asp-validation-for="Lastname" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Address" class="control-label"></label>
                <input asp-for="Address" id="txtAddress" class="form-control" />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" id="txtEmail" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Contact" class="control-label"></label>
                <input asp-for="Contact" id="txtContact" class="form-control" />
                <span asp-validation-for="Contact" class="text-danger"></span>
            </div>
            <div class="form-group">
                <button id="btnSubmit" class="btn btn-primary">Update</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $('document').ready(function () {
            $('#btnSubmit').on('click', function () {

                var _firstName = $('#txtFirstName').val();
                var _lastName = $('#txtLastName').val();
                var _address = $('#txtAddress').val();
                var _email = $('#txtEmail').val();
                var _contact = $('#txtContact').val();

                var _eventClientDetails =
                {
                    FirstName: _firstName,
                    LastName: _lastName,
                    Address: _address,
                    Email: _email,
                    Contact: _contact
                };

                $.post('/Coordinator/UpdateClientDetails', { _eventClient: _eventClientDetails }).done(ReplyLog);

            })

        });

        function ReplyLog(reply) {
            if (reply == true) {
                console.log("done");
                alert("Client updated successfully!");
                window.location = "/Coordinator/Index";
            } else {
                alert("Please enter valid details!");
            }


        }


    </script>



}
