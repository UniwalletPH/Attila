@model Attila.UI.Models.EventEquipmentRequestVM

@{
    ViewData["Title"] = "RequestEventRequirements";
}

<h1>RequestEventRequirements</h1>

<h4>EventEquipmentRequestVM</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <div>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="EventDetailsID" class="control-label"></label>
                <input asp-for="EventDetailsID" id="txtEventDetails" class="form-control" />
                <span asp-validation-for="EventDetailsID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EquipmentDetailsID" class="control-label"></label>
                <input asp-for="EquipmentDetailsID" id="txtEquipmentDetails" class="form-control" />
                <span asp-validation-for="EquipmentDetailsID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Quantity" class="control-label"></label>
                <input asp-for="Quantity" id="txtQuantity" class="form-control" />
                <span asp-validation-for="Quantity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <button id="btnSubmit" class="btn btn-primary">Submit</button>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script>
        $('document').ready(function () {
            $('#btnSubmit').on('click', function () {

                var _eventDetails = $('#txtEventDetails').val();
                var _equipmentDetails = $("#txtEventDetails").val();
                var _quantity = $("#txtQuantity").val();

                var _eventEquipmentRequest =
                {
                    EquipmentDetailsID: _equipmentDetails,
                    Quantity: _quantity,
                    EventDetailsID: _eventDetails,

                };

                $.post('/Coordinator/RequestEventRequirements', { _eventEquipmentRequest: _eventEquipmentRequest }).done(ReplyLog);
            });

        });

        function ReplyLog(reply) {
            console.log(reply);
            if (reply == true) {
                console.log("nice");
                alert("Payment added successfully!");
                window.location = "/Coordinator/Index";
            } else {
                alert("Please enter the correct details!");
            }
        }

    </script>
}
