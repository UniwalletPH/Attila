@model Attila.UI.Models.PackageAdditionalEquipmentRequestVM

@{
    ViewData["Title"] = "AddAdditionalEquipmentRequest";
}

<h1>AddAdditionalEquipmentRequest</h1>

<h4>PackageAdditionalEquipmentRequestVM</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <div>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="EquipmentDetailsID" class="control-label"></label>
                <input asp-for="EquipmentDetailsID" id="txtEquipmentDetails" class="form-control" />
                <span asp-validation-for="EquipmentDetailsID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Rate" class="control-label"></label>
                <input asp-for="Rate" id="txtRate" class="form-control" />
                <span asp-validation-for="Rate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Quantity" class="control-label"></label>
                <input asp-for="Quantity" id="txtQuantity" class="form-control" />
                <span asp-validation-for="Quantity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <button id="btnSubmit" class="btn btn-primary">Create</button>
            </div>
        </div>
    </div>
</div>

@section Scripts{ 
    <script>
        $('document').ready(function () {
            $('#btnSubmit').on('click', function () {

                var _equipmentDetails = $('#txtEquipmentDetails').val();
                var _rate = $('#txtRate').val();
                var _quantity = $('txtQuantity').val();

                var _additionalEquipment = {
                    EquipmentDetailsID: _equipmentDetails,
                    Rate: _rate,
                    Quantity: _quantity

                };

                $.post('/Coordinator/AddAdditionalEquipmentRequest', {_additionalEquipment: _additionalEquipment}).done(ReplyLog);

            });


        });

        function ReplyLog(reply) {
            if (reply == true) {
                console.log("done");
                alert("Additional equipment requested successfully!");
                window.location = "/Coordinator/Index";
            } else {
                alert("Please enter the correct details!");
            }


        }



    </script>



}