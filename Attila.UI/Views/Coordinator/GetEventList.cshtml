            </th>
            <th>
                @Html.DisplayNameFor(model => model.Remarks)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UserID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PackageDetailsID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EventClientID)
            </th>
            <th></th>
        </tr>
    </thead>
