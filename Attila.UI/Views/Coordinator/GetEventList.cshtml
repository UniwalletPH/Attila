@model IEnumerable<Attila.Application.Coordinator.Event.Queries.SearchEventVM>

@{
    ViewData["Title"] = "GetEventList";
}

<h1>Event List</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ID)
            </th>
