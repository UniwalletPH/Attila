@model Attila.UI.Models.EventPackageVM

@{
    ViewData["Title"] = "AddEventPackage";
}

<h1>AddEventPackage</h1>

<h4>EventPackageDetails</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <div>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Code" class="control-label"></label>
                <input asp-for="Code" id="txtCode" class="form-control" />
                <span asp-validation-for="Code" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" id="txtDesc" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NumberOfGuest" class="control-label"></label>
                <input asp-for="NumberOfGuest" id="txtNumberOfGuest" class="form-control" />
                <span asp-validation-for="NumberOfGuest" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Rate" class="control-label"></label>
                <input type="number" asp-for="Rate" id="txtRate" class="form-control" />
                <span asp-validation-for="Rate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Duration" class="control-label"></label>
                <input  asp-for="Duration" id="txtDuration" class="form-control" />
                <span asp-validation-for="Duration" class="text-danger"></span>
            </div>
            <div class="form-group">
                <button id="btnSubmit" class="btn btn-primary">Create</button>
            </div>
        </div>
    </div>
</div>

@section Scripts{ 
    <script>
        $('document').ready(function () {
            $('#btnSubmit').on('click', function () {

                var _code = $("#txtCode").val();
                var _description = $("#txtDesc").val();
                var _rate = $("#txtRate").val();
                var _numberOfGuest = $("#txtNumberOfGuest").val();
                var _duration = $("#txtDuration").val();

                var _eventPackageDetails =
                {
                    Rate: _rate,
                    Code: _code,
                    Description: _description,
                    NumberOfGuest: _numberOfGuest,
                    Duration: _duration,
                };

                $.post('/Coordinator/AddEventPackage', { _eventPackage: _eventPackageDetails }).done(ReplyLog);


            });

        });

        function ReplyLog(reply) {
            console.log(reply);
            if (reply == true) {
                console.log("nice");
                alert("Event package added successfully!");
                window.location = "/Coordinator/Index";
            } else {
                alert("Please enter the correct details!");
            }
        }

    </script>

}

