@model AddMenuCategoryVM

@{

    ViewData["Title"] = "Menu Category Form";

}



<div class="row">

    <div class="col-md-12">
        <div class="portlet light bordered">
            <div class="portlet-title">
                <div class="caption font-dark">
                    <span class="caption-subject bold uppercase">@ViewData["Title"]</span>
                </div>
            </div>
            <div class="portlet-body">
                <div class="table-toolbar">
                    <div class="row">
                        <div class="col-md-12">
                            <form role="form" asp-controller="EventPackages" asp-action="AddMenuCategory" data-ajax="true" data-ajax-method="post" data-ajax-success="OnSuccessCategory" data-ajax-failure="OnFailureCategory">


                                <div class="modal-body">

                                    <div class="form-body">
                                        <div class="form-group">
                                            <label>Category Name</label>
                                            <input type="text" class="form-control" placeholder="" asp-for="Category">
                                        </div>
                                    </div>

                                </div>
                                <div class="modal-footer">
                                    <div class="form-actions">
                                        <button type="submit" class="btn blue">Submit</button>
                                        <button type="button" class="btn default" data-dismiss="modal">Cancel</button>
                                    </div>
                                </div>

                            </form>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


<div class="modal fade" id="successcategory" tabindex="-1" role="basic" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" onclick="location.href='@Url.Action("Index", "EventPackages")'" data-dismiss="modal" aria-hidden="true"></button>
                <h4 class="modal-title">Successful Registration</h4>
            </div>
            <div class="modal-body"> Category added successfully! </div>
            <div class="modal-footer">
                <button type="button" class="btn dark btn-outline" onclick="location.href='@Url.Action("Index", "EventPackages")'" data-dismiss="modal">Close</button>
            </div>
        </div>
        <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
</div> 
@section Scripts {

    <script src="../assets/global/scripts/datatable.js" type="text/javascript"></script>
    <script src="../assets/global/plugins/datatables/datatables.min.js" type="text/javascript"></script>
    <script src="../assets/global/plugins/datatables/plugins/bootstrap/datatables.bootstrap.js" type="text/javascript"></script>
    <!-- END PAGE LEVEL PLUGINS -->
    <!-- BEGIN THEME GLOBAL SCRIPTS -->
    <script src="../assets/global/scripts/app.min.js" type="text/javascript"></script>
    <!-- END THEME GLOBAL SCRIPTS -->
    <!-- BEGIN PAGE LEVEL SCRIPTS -->

    <partial name="_ValidationScriptsPartial" />
    <script type="text/javascript">


        function OnSuccessCategory(e) {
            $("#successcategory").modal('show');

        };
        function OnFailureCategory(e) {
            alert("failed!");
        };



    </script>







}