@{
    ViewData["Title"] = "Menu List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model AddMenuCVM
@section Styles{
    <style>
        tr.group,
        tr.group:hover {
            background-color: #ddd !important;
        }
    </style>

    <link href="https://cdn.datatables.net/rowgroup/1.1.1/css/rowGroup.dataTables.min.css" rel="stylesheet" />
}

 






<div class="container-fluid" style="margin-top: 10px;">
    <h3 class="text-dark mb-4">Menu</h3>
    <div class="card shadow">
        <div class="card-header py-3">
            <div class="row">
                <div class="col-sm-6 col-md-6 col-lg-6 col-xl-6">
                    <p class="text-primary m-0 font-weight-bold"></p>
                </div>
                <div class="col-sm-6 col-md-6 col-lg-6 col-xl-6 text-right">
                    <p class="text-primary m-0 font-weight-bold">
                        <button class="btn btn-primary" type="button"  onclick="location.href='@Url.Action("MenuCategoryForm", "EventPackages")'">Add New Category</button>
                        <button class="btn btn-primary" type="button"  onclick="location.href='@Url.Action("MenuForm", "EventPackages")'">Add New Dish</button> 

                    </p>

                </div>
            </div>
        </div>
        <div class="card-body">

            <div class="table-responsive table mt-2" id="dataTable-4" role="grid" aria-describedby="dataTable_info">
                <table class="table    my-0" id="data_" >
                    <thead>
                        <tr>
                             
                            <th> Name </th>
                            <th> Description </th>
                            <th> Category</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.MenuList)
                        {

                            <tr class="odd gradeX">
                                <td>@item.Name</td>
                                <td>@item.Description</td>
                                <td>@item.MenuCategory.Category</td>
                            </tr>

                        }


                    </tbody>
                     
                </table>

            </div>

        </div>
    </div>
</div>
