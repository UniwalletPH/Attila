@{
    ViewData["Title"] = "Packages";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model PackagesCVM

@section Styles{
    <link href="../assets/global/plugins/datatables/datatables.min.css" rel="stylesheet" type="text/css" />
    <link href="../assets/global/plugins/datatables/plugins/bootstrap/datatables.bootstrap.css" rel="stylesheet" type="text/css" />
}
 















<div class="container-fluid" style="margin-top: 10px;">
    <h3 class="text-dark mb-4">Packages</h3>
    <div class="card shadow">
        <div class="card-header py-3">
            <div class="row">
                <div class="col-sm-6 col-md-6 col-lg-6 col-xl-6">
                    <p class="text-primary m-0 font-weight-bold"></p>
                </div>
                <div class="col-sm-6 col-md-6 col-lg-6 col-xl-6 text-right">
                    <p class="text-primary m-0 font-weight-bold">
                        <button class="btn btn-primary" type="button" onclick="location.href='@Url.Action("PackageMenuForm", "EventPackages")'">Add  Dish in Package</button>
                        <button class="btn btn-primary" type="button" onclick="location.href='@Url.Action("PackageForm", "EventPackages")'">Add New Package</button>
                        <button class="btn btn-primary" type="button" onclick="location.href='@Url.Action("MenuList", "EventPackages")'">Menu</button>

                    </p>
                  
                </div>
            </div>
        </div>
        <div class="card-body">

            <div class="table-responsive table mt-2" id="dataTable-4" role="grid" aria-describedby="dataTable_info">
                <table class="table dataTable my-0" id="dataTable">
                    <thead>
                        <tr>

                            <th> Code </th>
                            <th> Name </th>
                            <th> Description </th>
                            <th> Rate Per Head </th>
                        </tr>
                    </thead>
                    <tbody>

                        @foreach (var item in Model.EventPackages)
                        {
                            <tr class="odd gradeX" data-id="@item.ID">
                                <td>@item.Code</td>
                                <td>@item.Name</td>
                                <td>@item.Description</td>
                                <td>@item.RatePerHead</td>
                            </tr>
                        }


                    </tbody>
                    <tfoot>
                        <tr>
                            <td><strong>Code</strong></td>
                            <td><strong>Name</strong></td>
                            <td><strong>Description</strong></td>
                            <td><strong>RatePerHead</strong></td>
                        </tr>
                    </tfoot>
                </table>

            </div>

        </div>
    </div>
</div>

@section Scripts {


    <partial name="_ValidationScriptsPartial" />
    <script type="text/javascript">





        $(document).ready(function () {
            $('.packages tr').click(function () {
                var _id = $(this).data("id");
                a = _id;

                $.get('/Packages/Details', { PackageID: _id });
            });
        });




    </script>







}