@{
    ViewData["Title"] = "Packages";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model PackagesCVM

@section Styles{
    <link href="../assets/global/plugins/datatables/datatables.min.css" rel="stylesheet" type="text/css" />
    <link href="../assets/global/plugins/datatables/plugins/bootstrap/datatables.bootstrap.css" rel="stylesheet" type="text/css" />
}
<div class="page-head">
    <!-- BEGIN PAGE TITLE -->
    <div class="page-title">
        <h1>
            Event Packages
            <small> </small>
        </h1>
    </div>
    <!-- END PAGE TITLE -->
    <!-- BEGIN PAGE TOOLBAR -->
    <div class="page-toolbar">

        <!-- BEGIN THEME PANEL -->
        <!-- END THEME PANEL -->
    </div>
    <!-- END PAGE TOOLBAR -->
</div>
<!-- END PAGE HEAD-->
<!-- BEGIN PAGE BREADCRUMB -->
<ul class="page-breadcrumb breadcrumb">
</ul>
<div class="row">

    <div class="col-md-12">
        <!-- BEGIN EXAMPLE TABLE PORTLET-->
        <div class="portlet light bordered">
            <div class="portlet-title">


            </div>
            <div class="portlet-body">
                <div class="table-toolbar">
                    <div class="row">
                        <div class="col-md-6">


                            <div class="caption">

                                <button id="sample_editable_1_new" class="btn sbold green "  onclick="location.href='@Url.Action("PackageMenuForm", "EventPackages")'">
                                    Add New Menu in the Package
                                </button>
                                <button id="sample_editable_1_new" class="btn sbold green " onclick="location.href='@Url.Action("PackageForm", "EventPackages")'">
                                    Add New Package
                                </button>
                                <button id="sample_editable_1_new" class="btn sbold green " onclick="location.href='@Url.Action("MenuList", "EventPackages")'">
                                    Go to Menu List
                                </button>
                            </div>

                        </div>

                    </div>
                </div>

                <table class="table table-striped table-bordered table-hover   order-column packages" id="sample_1">


                    <thead>
                        <tr>

                            <th> Code </th>
                            <th> Name </th>
                            <th> Description </th>
                            <th> Rate Per Head </th>
                        </tr>
                    </thead>

                    <tbody>
                        @foreach (var item in Model.EventPackages)
                        {
                            <tr class="odd gradeX" data-id="@item.ID">
                                <td>@item.Code</td>
                                <td>@item.Name</td>
                                <td>@item.Description</td>
                                <td>@item.RatePerHead</td>
                            </tr>
                        }

                    </tbody>

                </table>
            </div>
        </div>
        <!-- END EXAMPLE TABLE PORTLET-->




    </div>
</div>  
