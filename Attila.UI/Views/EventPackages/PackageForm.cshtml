@model Attila.Application.Coordinator.Events.Queries.EventPackageVM

@{

    ViewData["Title"] = "Package Form";

} 

<div class="container-fluid" style="margin-bottom:500px;">
    <h3 class="text-dark mb-4">Package Form" </h3>
    <div class="row">
        <div class="col-lg-8">
            <div class="row">
                <div class="col-12">
                    <form role="form" asp-controller="EventPackages" asp-action="AddEventPackage" data-ajax="true" data-ajax-method="post" data-ajax-success="OnSuccessPackage" data-ajax-failure="OnFailurePackage">
                        <div class="card shadow mb-3">
                            <div class="card-header py-3">
                                <div class="row">
                                    <div class="col-sm-6 col-md-6 col-lg-6 col-xl-6">
                                        <p class="text-primary m-0 font-weight-bold"></p>
                                    </div>
                                    <div class="col-sm-6 col-md-6 col-lg-6 col-xl-6 text-right">
                                        <p class="text-primary m-0 font-weight-bold">
                                            <button class="btn btn-primary" type="submit">Submit</button>

                                        </p>

                                    </div>
                                </div>
                                <div class="card-body">

                                    <div class="form-row">
                                        <div class="col">
                                            <div class="form-group">
                                                <label for="supplier"><strong>Code</strong></label>
                                                <input type="text" class="form-control" placeholder="" asp-for="Code">



                                            </div>
                                        </div>
                                    </div>

                                    <div class="form-row">
                                        <div class="col">
                                            <div class="form-group">
                                                <label for="supplier"><strong>Name</strong></label>

                                                <input type="text" class="form-control" placeholder="" asp-for="Name">


                                            </div>
                                        </div>
                                    </div>
                                    <div class="form-row">
                                        <div class="col">
                                            <div class="form-group">
                                                <label for="supplier"><strong>Description</strong></label>

                                                <input type="text" class="form-control" asp-for="Description" placeholder="">


                                            </div>
                                        </div>
                                    </div>
                                    <div class="form-row">
                                        <div class="col">
                                            <div class="form-group">
                                                <label for="supplier"><strong>Rate Per Head</strong></label>
                                                <input type="number" class="form-control" asp-for="RatePerHead" placeholder="">



                                            </div>
                                        </div>
                                    </div>


                                </div>

                            </div>

                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

</div>
@section Scripts {

    <partial name="_ValidationScriptsPartial" />
    <script type="text/javascript">


        function OnSuccessPackage(e) { 
            
             window.location.href = '/EventPackages/Index';

        };
        function OnFailurePackage(e) {
            alert("failed");
             window.location.href = '/EventPackages/PackageForm';
        };



    </script>







}
 