<div class="row">
    <div class="col-md-12">
        <!-- Begin: life time stats -->
        <div class="portlet light portlet-fit portlet-datatable bordered">
            <div class="portlet-title">
                <div class="caption">
                    <button id="sample_editable_1_new" class="btn sbold green " onclick="location.href='@Url.Action("AddFood", "Inventory")'">
                        Add New
                    </button>
                    <button id="sample_editable_1_new" class="btn sbold green " onclick="location.href='@Url.Action("RequestFoodRestock", "Inventory")'">
                        Request Food Restock
                    </button>
                    <button id="sample_editable_1_new" class="btn sbold green " onclick="location.href='@Url.Action("AddFoodInventory", "Inventory")'">
                        Add Food Restock
                    </button>
                </div>

            </div>
            <div class="portlet-body">
                <div class="table-container">
                  <table class="table table-striped table-bordered table-hover order-column events" id="sample_1">
                    <thead>
                        <thead>
                            <tr>
                                <th>Name</th>
                                <th>Description</th>
                                <th>Specification</th>
                                <th>Quantity</th>
                                <th>Unit</th>
                                <th>Food Type</th>
                            </tr>
                        </thead>

                        <tbody>

                            @foreach (var item in Model.FoodListVM)
                            {
                                <tr>
                                    <td> @Html.DisplayFor(modelItem => item.FoodDetails.Name)</td>
                                    <td> @Html.DisplayFor(modelItem => item.FoodDetails.Description)</td>
                                    <td> @Html.DisplayFor(modelItem => item.FoodDetails.Specification)</td>
                                    <td> @Html.DisplayFor(modelItem => item.Quantity)</td>
                                    <td> @Html.DisplayFor(modelItem => item.FoodDetails.Unit)</td>
                                    <td> @Html.DisplayFor(modelItem => item.FoodDetails.FoodType)</td>

                                </tr>
                            }


                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <!-- End: life time stats -->
    </div>
</div>


<div class="row">
    <div class="col-md-12">
