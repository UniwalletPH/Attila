<div class="row">

    <div class="col-md-12">
        <!-- BEGIN EXAMPLE TABLE PORTLET-->
        <div class="portlet light bordered">
            <div class="portlet-title">
                <div class="caption font-dark">
                    <span class="caption-subject bold uppercase">DELIVERY</span>
                </div>

            </div>
            <div class="portlet-body">
                <div class="table-toolbar">
                    <div class="row">
                        <div class="col-md-6">


                            <div class="caption">

                                <button id="sample_editable_1_new" class="btn sbold green " onclick="location.href='@Url.Action("AddInventoryDelivery", "Inventory")'">
                                    Add New Delivery
                                </button>

                            </div>

                        </div>

                    </div>
                </div>


                <table class="display" id="sample_1">
                    <thead>
                        <tr>
                            <th>Delivery Date</th>
                            <th>Supplier</th>
                            <th>Address</th>
                            <th>
                            </th>
                        </tr>
                    </thead>

                    <tbody>

                        @foreach (var item in Model.InventoryDeliveryVM)
                        {
                            <tr data-id="@item.ID">
                                <td> @Html.DisplayFor(modelItem => item.DeliveryDate)</td>


                                <td> @Html.DisplayFor(modelItem => item.Supplier.Name)</td>

                                <td> @Html.DisplayFor(modelItem => item.DeliveryPrice)</td>

                                <td>  <button type="button" class="btn dark btn-outline see">See All</button> </td>
                            </tr>
                        }

                    </tbody>


                </table>


            </div>
        </div>
        <!-- END EXAMPLE TABLE PORTLET-->




    </div>
</div>



