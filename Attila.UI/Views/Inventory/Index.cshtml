@{
    ViewData["Title"] = "Inventory";

}
@model Attila.UI.Models.InventoryDataCVM
@section Scripts{
     
    <script>

         

        $(document).on('click', 'tr .see', function (e) {

            id = $(this).closest('tr').attr('data-id');
            var url = window.location.href = '/Inventory/Details?id=' + id;
            window.location.href = url.replace('__id__', id);


        });

        $(document).on('click', 'tr .view-request-food', function (e) {

            id = $(this).closest('tr').attr('data-id');
            var url = window.location.href = '/Inventory/FoodRestockRequestDetails?id=' + id;
            window.location.href = url.replace('__id__', id);


        });
        $(document).on('click', 'tr .edit-request-food', function (e) {

            id = $(this).closest('tr').attr('data-id');
            var url = window.location.href = '/Inventory/RequestFoodRestock?id=' + id;
            window.location.href = url.replace('__id__', id);


        });

        $(document).on('click', 'tr .submit-request-food', function (e) {

            id = $(this).closest('tr').attr('data-id');
            var url = window.location.href = '/Inventory/ChangeRequestStatus?id=' + id;
            window.location.href = url.replace('__id__', id);


        });

        $(document).on('click', 'tr .view-request-eq', function (e) {

            id = $(this).closest('tr').attr('data-id');
            var url = window.location.href = '/Inventory/EquipmentRestockRequestDetails?id=' + id;
            window.location.href = url.replace('__id__', id);


        });
        $(document).on('click', 'tr .edit-request-eq', function (e) {

            id = $(this).closest('tr').attr('data-id');
            var url = window.location.href = '/Inventory/RequestEquipmentRestock?id=' + id;
            window.location.href = url.replace('__id__', id);


        });

        $(document).on('click', 'tr .submit-request-eq', function (e) {

            id = $(this).closest('tr').attr('data-id');
            var url = window.location.href = '/Inventory/ChangeEquipmentRequestStatus?id=' + id;
            window.location.href = url.replace('__id__', id);


        });
        $(document).on('click', 'tr .view-request-equipment', function (e) {

            id = $(this).closest('tr').attr('data-id');
            var url = window.location.href = '/Inventory/EquipmentRestockRequestDetails?id=' + id;
            window.location.href = url.replace('__id__', id);


        });




    </script>



} 
     





<div class="container-fluid" style="margin-top: 10px;">
    <h3 class="text-dark mb-4">Inventory</h3>
    <div class="card shadow">
        <div class="card-header py-3">
            <div class="row">
                <div class="col-sm-6 col-md-6 col-lg-6 col-xl-6">
                    <p class="text-primary m-0 font-weight-bold">Deliveries</p>
                </div>
                <div class="col-sm-6 col-md-6 col-lg-6 col-xl-6 text-right">
                    <p class="text-primary m-0 font-weight-bold"><button class="btn btn-primary" type="button" onclick="location.href='@Url.Action("AddInventoryDelivery", "Inventory")'">Add</button></p>
                </div>
            </div>
        </div>
        <div class="card-body">
 
            <div class="table-responsive table mt-2" id="dataTable-4" role="grid" aria-describedby="dataTable_info">
                <table class="table dataTable my-0" id="dataTable">
                    <thead>
                        <tr>
                            <th>Date of Delivery</th>
                            <th>Supplier</th>
                            <th>Price</th>
                            <th> </th> 
                        </tr>
                    </thead>
                    <tbody> 
                            @foreach (var item in Model.InventoryDeliveryVM)
                            {
                            <tr data-id="@item.ID">
                                <td> @Html.DisplayFor(modelItem => item.DeliveryDate)</td>


                                <td> @Html.DisplayFor(modelItem => item.Supplier.Name)</td>

                                <td> @Html.DisplayFor(modelItem => item.DeliveryPrice)</td>

                                <td>  <button type="button" class="btn btn-primary border rounded  see">See All</button> </td>
                            </tr>
                        } 
                        </tbody>
                    <tfoot>
                        <tr>
                            <td><strong>Date of Delivery</strong></td>
                            <td><strong>Supplier</strong></td>
                            <td><strong>Price</strong></td>
                            <td><strong> </strong></td>  
                        </tr>
                    </tfoot>
                </table>
            </div>
          
        </div>
    </div>
</div>
