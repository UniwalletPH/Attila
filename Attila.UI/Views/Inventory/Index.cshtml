                    <button id="sample_editable_1_new" class="btn sbold green " onclick="location.href='@Url.Action("AddEquipment", "Inventory")'">
                        Add New
                    </button>
                    <button id="sample_editable_1_new" class="btn sbold green " onclick="location.href='@Url.Action("RequestEquipmentRestock", "Inventory")'">
