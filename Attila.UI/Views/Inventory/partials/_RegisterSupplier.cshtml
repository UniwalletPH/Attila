@model  SupplierDetailsVM

@{
    
    ViewData["Title"] = "Supplier Form"; 

}



    <div class="modal fade" id="addsupplier" tabindex="-1" role="basic" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <form role="form" asp-controller="Inventory" asp-action="AddSupplierDetails" data-ajax="true" data-ajax-method="post" data-ajax-success="OnSuccess" data-ajax-failure="OnFailure">

                    <div class="modal-header">
                        <button type="button" class="close" onclick="location.href='@Url.Action("Supplier", "Inventory")'" data-dismiss="modal" aria-hidden="true"></button>
                        <h4 class="modal-title">Supplier Form</h4>
                    </div>
                    <div class="modal-body">

                        <div class="form-body">

                            <div class="form-group">
                                <label>Company / Supplier Name</label>
                                <input type="text" class="form-control" placeholder="" asp-for="Name">
                            </div>
                            <div class="form-group">
                                <label>Contact Person</label>
                                <input type="text" class="form-control" placeholder="" asp-for="ContactPersonName">
                            </div>
                            <div class="form-group">
                                <label>Contact Number</label>
                                <input type="text" class="form-control" placeholder="" asp-for="ContactNumber">
                            </div>
                            <div class="form-group">
                                <label>Address</label>
                                <input type="text" class="form-control" placeholder="" asp-for="Address">

                                         </div>

                        </div>




                    </div>
                    <div class="modal-footer">
                        <div class="form-actions">
                            <button type="submit" id="btnSubmit" class="btn blue">Submit</button>
                            <button type="button" class="btn default" data-dismiss="modal">Cancel</button>
                        </div>
                    </div>

                </form>
            </div>
            <!-- /.modal-content -->
        </div>
        <!-- /.modal-dialog -->
    </div>
 