@model EquipmentInventoryVM 

@{

    Layout = "~/Views/Shared/_Layout.cshtml";

}

<div class="page-head">
    <!-- BEGIN PAGE TITLE -->
    <div class="page-title">
        <h1>
            Update Equipment Stocks
            <small> </small>
        </h1>
    </div>
    <!-- END PAGE TITLE -->
    <!-- BEGIN PAGE TOOLBAR -->
    <div class="page-toolbar">

        <!-- BEGIN THEME PANEL -->
        <!-- END THEME PANEL -->
    </div>
    <!-- END PAGE TOOLBAR -->
</div>
<!-- END PAGE HEAD-->
<!-- BEGIN PAGE BREADCRUMB -->
<ul class="page-breadcrumb breadcrumb">
</ul>
<div class="row">
    <div class="col-md-12">
        <!-- Begin: life time stats -->
        <div class="portlet light bordered">

            <div class="portlet-body form">
                <form role="form" asp-action="AddEquipmentInventory" asp-controller="Inventory" data-ajax="true" data-ajax-method="post" data-ajax-success="OnSuccess">



                    <div class="form-group">
                        <label>Equipment Details</label>
                        @Html.DropDownListFor(m => m.EquipmentDetailsID, Model.EquipmentDetailsList, "--SELECT CLIENT--", new { @class = "form-control" })
                    </div>

                    <div class="form-group">
                        <label>Delivery Details</label>
                        @Html.DropDownListFor(m => m.EquipmentDeliveryID, Model.EquipmentDeliveryList, "--SELECT CLIENT--", new { @class = "form-control" })

                    </div>
                    <div class="form-group">
                        <label>Price</label>
                        <input type="number" class="form-control" asp-for="ItemPrice" placeholder="">
                    </div>
                    <div class="form-group">
                        <label>Quantity</label>
                        <input type="number" class="form-control" asp-for="Quantity" placeholder="">
                    </div>
                  

                    <div class="form-group">
                        <label>Remarks</label>
                        <input type="number" class="form-control" asp-for="Remarks" placeholder="">
                    </div>





                    <div class="form-actions">
                        <button type="submit" id="btnSubmit" class="btn blue">Submit</button>
                        <button type="button" class="btn default">Cancel</button>
                    </div>

                </form>






            </div>



        </div>
    </div>
    <!-- End: life time stats -->
</div>

@section Scripts{
    <script src="../assets/global/plugins/moment.min.js" type="text/javascript"></script>
    <script src="../assets/global/plugins/bootstrap-daterangepicker/daterangepicker.min.js" type="text/javascript"></script>
    <script src="../assets/global/plugins/bootstrap-datepicker/js/bootstrap-datepicker.min.js" type="text/javascript"></script>
    <script src="../assets/global/plugins/bootstrap-timepicker/js/bootstrap-timepicker.min.js" type="text/javascript"></script>
    <script src="../assets/global/plugins/bootstrap-datetimepicker/js/bootstrap-datetimepicker.min.js" type="text/javascript"></script>
    <script src="../assets/global/plugins/clockface/js/clockface.js" type="text/javascript"></script>

    <script type="text/javascript">
        function OnSuccess(e) {
            $("#success").modal('show');


        }

        function OnFailure(e) {
            console.log(e);
            alert("failed!");
        }

    </script>
    <partial name="partials/_SuccessfulRegistration" />

}
