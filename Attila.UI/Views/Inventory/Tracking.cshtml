
@{
    ViewData["Title"] = "Equipment Tracking";
}

@model EquipmentTrackingCVM

<div class="container-fluid" style="margin-top: 10px;">
    <div style="margin: 10px;">
        <div class="row">
        </div>
    </div>
    <div class="card shadow">
        <div class="card-header py-3">
            <div class="row">
                <div class="col-sm-6 col-md-6 col-lg-6 col-xl-6">
                    <p class="text-primary m-0 font-weight-bold">Check In List</p>
                </div>
            </div>
        </div>
        <div class="card-body">

            <div class="table-responsive table mt-2" id="dataTable" role="grid" aria-describedby="dataTable_info">
                <table class="table dataTable my-0" id="dataTable">
                    <thead>
                        <tr>
                            <th>Check In ID</th>
                            <th>Event ID</th>
                            <th>Equipment ID</th>
                            <th>Quantity</th>
                            <th>Tracking Date</th>
                            <th>Tracking Action</th>
                        </tr>
                    </thead>
                    <tbody>

                        @foreach (var item in Model.CheckInEquipmentTracking)
                        {
                        <tr data-id="@item.ID">
                            <td>@Html.DisplayFor(modelItem => item.ID)</td>
                            <td>@Html.DisplayFor(modelItem => item.EventID)</td>
                            <td>@Html.DisplayFor(modelItem => item.EquipmentID)</td>
                            <td>@Html.DisplayFor(modelItem => item.Quantity)</td>
                            <td>@Html.DisplayFor(modelItem => item.TrackingDate)</td>
                            <td>@Html.DisplayFor(modelItem => item.TrackingAction)</td>
                        </tr>
                        }
                    </tbody>
                    <tfoot>
                        <tr>
                            <td><strong>Check In ID</strong></td>
                            <td><strong>Event ID</strong></td>
                            <td><strong>Equipment ID</strong></td>
                            <td><strong>Quantity</strong></td>
                            <td><strong>Tracking Date</strong></td>
                            <td><strong>Tracking Action</strong></td>
                        </tr>
                    </tfoot>
                </table>
            </div>

        </div>
    </div>
</div>


