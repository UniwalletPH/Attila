
@{
    ViewData["Title"] = "Equipment Tracking";
}

@model ViewEventCVM

<div class="container-fluid" style="margin-top: 10px;">
    <h3 class="text-dark mb-4">Events</h3>
    <div style="margin: 10px;">
        <div class="row">
        </div>
    </div>
    <div class="card shadow">
        <div class="card-header py-3">
            <div class="row">
                <div class="col-sm-6 col-md-6 col-lg-6 col-xl-6">
                    <p class="text-primary m-0 font-weight-bold">Check In List</p>
                </div>
            </div>
        </div>
        <div class="card-body">

            <div class="table-responsive table mt-2" id="dataTable" role="grid" aria-describedby="dataTable_info">
                <table class="table dataTable my-0" id="dataTable">
                    <thead>
                        <tr>
                            <th>Booking Date</th>
                            <th>Event Name</th>
                            <th>Event Date</th>
                            <th>Client</th>
                            <th>Coordinator</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>

                        @foreach (var item in Model.IncomingEvent)
                        {
                            <tr data-id="@item.ID">
                                <td>@($"{item.BookingDate: MMM dd, yyyy}")</td>
                                <td>@Html.DisplayFor(modelItem => item.EventName)</td>
                                <td>@($"{item.EventDate: MMM dd, yyyy}")</td>
                                <td>@Html.DisplayFor(modelItem => item.Client.Name)</td>
                                <td>@Html.DisplayFor(modelItem => item.Coordinator.Name)</td>
                                <td><button type="button" class="btn btn-primary border rounded view">View Event Details</button>  </td>
                            </tr>
                        }
                    </tbody>
                    <tfoot>
                        <tr>
                            <td><strong>Booking Date</strong></td>
                            <td><strong>Event Name</strong></td>
                            <td><strong>Event Date</strong></td>
                            <td><strong>Client</strong></td>
                            <td><strong>Coordinator</strong></td>
                            <td><strong></strong></td>
                        </tr>
                    </tfoot>
                </table>
            </div>

        </div>
    </div>
</div>


<div class="container-fluid" style="margin-top: 10px;">
    <div style="margin: 10px;">
        <div class="row">
        </div>
    </div>
    <div class="card shadow">
        <div class="card-header py-3">
            <div class="row">
                <div class="col-sm-6 col-md-6 col-lg-6 col-xl-6">
                    <p class="text-primary m-0 font-weight-bold">Completed</p>
                </div>
            </div>
        </div>
        <div class="card-body">

            <div class="table-responsive table mt-2" id="dataTable" role="grid" aria-describedby="dataTable_info">
                <table class="table dataTable my-0" id="dataTable">
                    <thead>
                        <tr>
                            <th>Booking Date</th>.
                            <th>Event Name</th>
                            <th>Event Date</th>
                            <th>Client</th>
                            <th>Coordinator</th>
                            <th></th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>

                        @foreach (var item in Model.CompletedEvent)
                        {
                            <tr data-id="@item.ID">
                                <td>@($"{item.BookingDate: MMM dd, yyyy}")</td>.
                                <td>@Html.DisplayFor(modelItem => item.EventName)</td>
                                <td>@($"{item.EventDate: MMM dd, yyyy}")</td>
                                <td>@Html.DisplayFor(modelItem => item.Client.Name)</td>
                                <td>@Html.DisplayFor(modelItem => item.Coordinator.Name)</td>
                                <td><button type="button" class="btn btn-primary border rounded view">View Event Details</button></td>
                                <td><button type="button" class="btn btn-primary border rounded checkIn">Check In Equipments</button></td>
                            </tr>
                        }
                    </tbody>
                    <tfoot>
                        <tr>
                            <td><strong>Booking Date</strong></td>
                            <td><strong>Event Name</strong></td>
                            <td><strong>Event Date</strong></td>
                            <td><strong>Client</strong></td>
                            <td><strong>Coordinator</strong></td>
                            <td><strong></strong></td>
                            <td><strong></strong></td>
                        </tr>
                    </tfoot>
                </table>
            </div>

        </div>
    </div>
</div>