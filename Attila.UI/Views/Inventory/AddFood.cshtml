@model Attila.UI.Models.FoodDetailsCVM

@{

    Layout = "~/Views/Shared/_Layout.cshtml";

} 




<div class="container-fluid">
    <h3 class="text-dark mb-4">Food Form </h3>
    <div class="row">
        <div class="col-lg-8">
            <div class="row">
                <div class="col-12"> 
                        <form role="form" asp-action="AddFood" asp-controller="Inventory" data-ajax="true" data-ajax-method="post" data-ajax-success="OnSuccess">

                            <div class="card shadow mb-3">
                                <div class="card-header py-3">
                                    <div class="row">
                                        <div class="col-sm-6 col-md-6 col-lg-6 col-xl-6">
                                            <p class="text-primary m-0 font-weight-bold"> </p>
                                        </div>
                                        <div class="col-sm-6 col-md-6 col-lg-6 col-xl-6 text-right">
                                            <p class="text-primary m-0 font-weight-bold"> <button class="btn btn-primary btn-sm" type="submit">Register</button></p>
                                        </div>
                                    </div>

                                    <div class="form-row">
                                        <div class="col">
                                            <div class="form-group">
                                                <label for="specification"><strong>Name</strong></label>
                                                <input type="text" class="form-control" asp-for="Name" placeholder="Ex. Brown Sugar ">
                                            </div>
                                        </div>
                                    </div>
                                    <div class="form-row">
                                        <div class="col">
                                            <div class="form-group">
                                                <label for="specification"><strong>Code</strong></label>
                                                <input type="text" class="form-control" asp-for="Code" placeholder="Ex. BS20200505 ">
                                            </div>
                                        </div>
                                    </div>

                                    <div class="form-row">
                                        <div class="col">
                                            <div class="form-group">
                                                <label for="specification"><strong>Specification</strong></label>
                                                <input type="text" class="form-control" asp-for="Specification" placeholder="">
                                            </div>
                                        </div>
                                    </div>
                                    <div class="form-row">
                                        <div class="col">
                                            <div class="form-group">
                                                <label for="description"><strong>Description</strong></label>
                                                <input type="text" class="form-control" asp-for="Description" placeholder="">


                                            </div>
                                        </div>
                                    </div>
                                    <div class="form-row">
                                        <div class="col">
                                            <div class="form-group">
                                                <label for="type_"><strong>Type</strong></label>
                                                <select class="form-control" required asp-for="FoodType">
                                                    <optgroup label="Type">
                                                        <option value="" disabled selected>Select your option</option>
                                                        <option value="1">Perishable</option>
                                                        <option value="2">Non-perishable</option>
                                                        <option value="3">Others</option>
                                                    </optgroup>
                                                </select>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="form-row">
                                        <div class="col">
                                            <div class="form-group">
                                                <label for="unit"><strong>Unit</strong></label>

                                                <select class="form-control" required asp-for="Unit">
                                                    <optgroup label="Unit">
                                                        <option value="" disabled selected>Select your option</option>
                                                        <option value="1">Piece</option>
                                                        <option value="2">Box</option>
                                                        <option value="3">Dozen</option>
                                                        <option value="4">Others</option>

                                                    </optgroup>
                                                </select>
                                            </div>
                                        </div>
                                    </div>


 
                                </div>
                            </div>
                        </form>
                </div>
            </div>
        </div>
    </div>
</div>













@section Scripts{
   
    <partial name="_ValidationScriptsPartial" />

    <script type="text/javascript">
        function OnSuccess(e) {
            $("#success").modal('show');


        }

        function OnFailure(e) {
            console.log(e);
            alert("failed!");
        }

    </script>

}
