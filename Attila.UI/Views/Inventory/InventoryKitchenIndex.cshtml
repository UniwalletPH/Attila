
@{
    ViewData["Title"] = "Kitchen";
}

@{
    string _inventoryListUrl = "/Inventory/InventoryKitchenIndex";

    if (User.IsInRole(AccessRole.Admin) || User.IsInRole(AccessRole.InventoryManager))
    {
        _inventoryListUrl = "/Inventory/InventoryKitchenIndex";
    }

