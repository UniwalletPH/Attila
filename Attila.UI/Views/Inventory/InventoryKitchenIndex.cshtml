                <a href="#" class="btn btn-primary pull-right" style="font-size:11px;margin-right:10px;">Add Details</a>
                <h4 class="card-title">Food</h4></a>
                <kendo-grid name="grdFood">
                    <datasource type="DataSourceTagHelperType.Ajax" server-operation="true">
                        <transport>
                            <read url="@_inventoryListUrl" />
                        </transport>
                        <sorts>
                            <sort field="BookingDate" direction="desc" />
                        </sorts>
                        <schema>
                            <model>
                                <fields>
                                    <field name="BookingDate" type="Date" />
                                    <field name="EventDate" type="Date" />
                                </fields>
                            </model>
                        </schema>
                    </datasource>
                    <toolbar>
                        <toolbar-button name="search"></toolbar-button>
                    </toolbar>
                    <search fields="@(new[] { "EventName" })" />
                    <no-records template="<p>No records found</p>" />
                    <pageable enabled="false" refresh="true" />
                    <scrollable enabled="true" />
                    <sortable enabled="true" />
                    <columns>
                        <column field="" title="Item" width="140" />
                        <column field="" title="Specification" width="140" />
                        <column field="" title="Brand" />
                        <column field="" title="Supplier" width="200" />
