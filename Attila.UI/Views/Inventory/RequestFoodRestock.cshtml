@model Attila.UI.Models.FoodRestockRequestVM
@{

    Layout = "~/Views/Shared/_Layout.cshtml";

}


<div class="page-head">
    <!-- BEGIN PAGE TITLE -->
    <div class="page-title">
        <h1>
            Request Food Restock
            <small> </small>
        </h1>
    </div>
    <!-- END PAGE TITLE -->
    <!-- BEGIN PAGE TOOLBAR -->
    <div class="page-toolbar">

        <!-- BEGIN THEME PANEL -->
        <!-- END THEME PANEL -->
    </div>
    <!-- END PAGE TOOLBAR -->
</div>
<!-- END PAGE HEAD-->
<!-- BEGIN PAGE BREADCRUMB -->
<ul class="page-breadcrumb breadcrumb">
</ul>
<div class="row">
    <div class="col-md-12">
        <div class="portlet light bordered">
            <div class="portlet-title">
                <div class="caption">
                    <i class="icon-speech font-green"></i>
                    <span class="caption-subject bold font-green uppercase">Client Profile</span>
                </div>

            </div>
            <div class="portlet-body">
                <form role="form" asp-action="RequestFoodRestock" asp-controller="InventoryManager" data-ajax="true" data-ajax-method="post" data-ajax-success="OnSuccess" data-ajax-failure="OnFailure">
                    <div class="form-group">
                        <label class="control-label">Equipment ID  </label>
                        @Html.DropDownListFor(m => m.FoodDetailsID, Model.FoodDetailsList, "--SELECT CLIENT--", new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        <label class="control-label">Quantity</label>
                        <input type="text" asp-for="Quantity" placeholder="John Smith" class="form-control">
                    </div>
                    @*<div class="form-group">
                        <label class="control-label">E-mail Address</label>
                        <input type="email" asp-for="Foo" placeholder="john.smith@gmail.com" class="form-control">
                    </div>
                    <div class="form-group">
                        <label class="control-label">Home Address</label>
                        <input type="text" asp-for="Address" placeholder="Sample St. Sample City" class="form-control">
                    </div>

                    <div class="form-group">
                        <label class="control-label">Mobile Number</label>
                        <input type="tel" asp-for="Contact" placeholder="+63 912345678" class="form-control">
                    </div>*@
                    <div class="form-group">
                        <label class="control-label">Telephone Number</label>
                        <input type="tel" placeholder="+632  1234 5678 " class="form-control">
                    </div>

                    <div class="form-group">
                        <label class="control-label">Remarks</label>
                        <textarea class="form-control" rows="3" placeholder=""></textarea>
                    </div>
                    <div class="margin-top-10">
                        <button type="submit" id="btnSubmit" class="btn green">Register </button>
                    </div>
                </form>
            </div>
        </div>
    </div>

</div>

<partial name="partials/_SuccessfulRegistration.cshtml" />
@section Scripts{
    <script type="text/javascript">
        function OnSuccess(e) {
            $("#successreq").modal('show');


        }

        function OnFailure(e) {
            console.log(e);
            alert("Please enter the correct details!");
        }

    </script>
} 