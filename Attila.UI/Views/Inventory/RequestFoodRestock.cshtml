@model Attila.UI.Models.FoodRestockRequestCVM
@{

    ViewData["Title"] = "Request Food Restock";
    Layout = "~/Views/Shared/_Layout.cshtml";

}


<div class="page-head">
    <!-- BEGIN PAGE TITLE -->
    <div class="page-title">
        <h1>
            Request Food Restock
            <small> </small>
        </h1>
    </div>
    <!-- END PAGE TITLE -->
    <!-- BEGIN PAGE TOOLBAR -->
    <div class="page-toolbar">

        <!-- BEGIN THEME PANEL -->
        <!-- END THEME PANEL -->
    </div>
    <!-- END PAGE TOOLBAR -->
</div>
<!-- END PAGE HEAD-->
<!-- BEGIN PAGE BREADCRUMB -->
<ul class="page-breadcrumb breadcrumb">
</ul>
<div class="row">
    <div class="col-md-12">
        <div class="portlet light bordered">
            <div class="portlet-title">
                <div class="caption">
                    <i class="icon-speech font-green"></i>
                    <span class="caption-subject bold font-green uppercase">@ViewData["Title"]</span>
                </div>

            </div>
            <div class="portlet-body">
                <form role="form" asp-controller="Inventory" asp-action="RequestFoodRestock" data-ajax="true" data-ajax-method="post" data-ajax-success="OnSuccess" data-ajax-failure="OnFailure">



                    <table class="table table-striped table-bordered table-hover order-column events" id="sample_1">
                        <thead>
                            <tr>

                                <th> Item </th>
                                <th> Quantity </th>


                            </tr>
                        </thead>
                        <tbody>




                            <tr>
                                <td>@Html.DropDownListFor(m => m.FoodRequestCollectionCVM[0].FoodID, Model.FoodDetailsList, "----SELECT ITEM----", new { @class = "form-control" })</td>
                                <td><input type="text" asp-for="FoodRequestCollectionCVM[0].Quantity" placeholder="" class="form-control"></td>
                            </tr>
                            <tr>
                                <td>@Html.DropDownListFor(m => m.FoodRequestCollectionCVM[1].FoodID, Model.FoodDetailsList, "----SELECT ITEM----", new { @class = "form-control" })</td>
                                <td><input type="text" asp-for="FoodRequestCollectionCVM[1].Quantity" placeholder="" class="form-control"></td>
                            </tr>


                        </tbody>
                    </table>




                    @*<div class="form-group">
                            <label class="control-label">Food </label>
                            @Html.DropDownListFor(m => m.FoodDetailsID, Model.FoodDetailsList, "-- SELECT FOOD --", new { @class = "form-control" })
                        </div>
                        <div class="form-group">
                            <label class="control-label">Quantity</label>
                            <input type="text" asp-for="Quantity" placeholder="John Smith" class="form-control">
                        </div>*@



                    <div class="margin-top-10">
                        <button type="submit" id="btnSubmit" class="btn green">Submit </button>
                    </div>
                </form>
            </div>
        </div>
    </div>

</div>




<div class="modal fade" id="successreq" tabindex="-1" role="basic" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" onclick="location.href='@Url.Action("Index", "Inventory")'" data-dismiss="modal" aria-hidden="true"></button>
                <h4 class="modal-title">Successful Request</h4>
            </div>
            <div class="modal-body">Restock request has been sent successfully! </div>
            <div class="modal-footer">
                <button type="button" class="btn dark btn-outline" onclick="location.href='@Url.Action("Index", "Inventory")'" data-dismiss="modal">Close</button>
            </div>
        </div>
        <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
</div>
@section Scripts{

    <partial name="_ValidationScriptsPartial" />
    <script type="text/javascript">
        function OnSuccess(e) {
            $("#successreq").modal('show');


        }

        function OnFailure(e) {
            console.log(e);
            alert("Please enter the correct details!");
        }

            




    </script>
}
