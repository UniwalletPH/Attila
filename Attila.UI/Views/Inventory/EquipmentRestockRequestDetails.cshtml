@{
    ViewData["Title"] = "Equipment Restock Request Details";

}
@model EquipmentRestockRequestDetailsCVM

@section Scripts{

    <script src="../assets/global/scripts/datatable.js" type="text/javascript"></script>
    <script src="../assets/global/plugins/datatables/datatables.min.js" type="text/javascript"></script>
    <script src="../assets/global/plugins/datatables/plugins/bootstrap/datatables.bootstrap.js" type="text/javascript"></script>
    <!-- END PAGE LEVEL PLUGINS -->
    <!-- BEGIN THEME GLOBAL SCRIPTS -->
    <script src="../assets/global/scripts/app.min.js" type="text/javascript"></script>
    <!-- END THEME GLOBAL SCRIPTS -->
    <!-- BEGIN PAGE LEVEL SCRIPTS -->
    <script src="../assets/pages/scripts/table-datatables-managed.min.js" type="text/javascript"></script>

    <script>




             var  id =@Model.EquipmentRequest.ID;
        $(document).on('click', ' #btnSubmit', function (e) {


                var url = '@Url.Action("ApproveEquimentRequest", "Inventory", new { id = "__id__"  })';
                window.location.href = url.replace('__id__', id)


            });




            $(document).on('click', ' #btnDecline', function (e) {


                var url = '@Url.Action("DeclineEquipmentRequest", "Inventory", new { id = "__id__"  })';
                window.location.href = url.replace('__id__', id)


            });</script>



}
@section Styles{


    <style>
        tr.group,
        tr.group:hover {
            background-color: #ddd !important;
        }
    </style>

    <link href="../assets/global/plugins/datatables/datatables.min.css" rel="stylesheet" type="text/css" />
    <link href="../assets/global/plugins/datatables/plugins/bootstrap/datatables.bootstrap.css" rel="stylesheet" type="text/css" />
}








<div class="page-head">
    <!-- BEGIN PAGE TITLE -->
    <div class="page-title">
        <div class="caption font-dark">
            <span class="caption-subject bold uppercase">@ViewData["Title"]</span>
        </div>
    </div>
    <!-- END PAGE TITLE -->
    <!-- BEGIN PAGE TOOLBAR -->
    <div class="page-toolbar">

        <!-- BEGIN THEME PANEL -->
        <!-- END THEME PANEL -->
    </div>
    <!-- END PAGE TOOLBAR -->
</div>
<!-- END PAGE HEAD-->
<!-- BEGIN PAGE BREADCRUMB -->
<ul class="page-breadcrumb breadcrumb">
</ul>


<div class="row">

    <div class="col-md-12">
        <!-- BEGIN EXAMPLE TABLE PORTLET-->
        <div class="portlet light bordered">
            <div class="portlet-title">
                <div class="caption font-dark">
                    <span class="caption-subject bold uppercase">EQUIPMENT REQUEST DETAILS</span>
                </div>

            </div>
            <div class="portlet-body">

                <div class="form-group">
                    <label>
                        DATE REQUESTED:  @Html.DisplayFor(a => a.EquipmentRequest.DateTimeRequest)
                    </label><br>
                </div>
                <div class="form-group">
                    <label>
                        STATUS:  @Html.DisplayFor(a => a.EquipmentRequest.Status)
                    </label><br>
                </div>
                <div class="form-group">
                    <label>
                        INVENTORY MANAGER: @Html.DisplayFor(a => a.EquipmentRequest.InventoryManager.Name)
                    </label><br>
                </div>


                <table class="display" id="sample_2">
                    <thead>
                        <tr>
                            <th>Code</th>
                            <th>Name</th>
                            <th>Unit</th>
                            <th>Quantity</th>
                        </tr>
                    </thead>

                    <tbody>

                        @foreach (var item in Model.EquipmentCollection)
                        {
                            <tr>
                                <td> @Html.DisplayFor(modelItem => item.Equipment.Code)</td>
                                <td> @Html.DisplayFor(modelItem => item.Equipment.Name)</td>
                                <td> @Html.DisplayFor(modelItem => item.Equipment.UnitType)</td>
                                <td> @Html.DisplayFor(modelItem => item.Quantity)</td>
                            </tr>

                        }

                    </tbody>


                </table>
                @{ if (Model.EquipmentRequest.Status.ToString() == "ForApproval")
                    {
                        if (User.IsInRole("Admin"))
                        {
                            <text>
                                <button type="button" id="btnSubmit" class="btn blue"> Approve</button>
                                <button type="button" id="btnDecline" class="btn blue">Reject</button>
                            </text>
                        }
                        else if (User.IsInRole("InventoryManager"))
                        {
                            <text>
                                <button type="button" id="btnEdit" class="btn blue"> Edit</button>
                            </text>
                        }
                    }
                }
            </div>
        </div>
        <!-- END EXAMPLE TABLE PORTLET-->







    </div>
