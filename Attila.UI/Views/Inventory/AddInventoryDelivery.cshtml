@model Attila.UI.Models.InventoryDeliveryCVM
@{

    Layout = "~/Views/Shared/_Layout.cshtml";

}

 





<div class="container-fluid">
    <h3 class="text-dark mb-4">New Delivery </h3>
    <div class="row">
        <div class="col-lg-8">
            <div class="row">
                <div class="col-12">
                    <div class="card shadow mb-3">
                        <div class="card-header py-3"></div>
                        <div class="card-body">
                            <form  role="form" asp-controller="Inventory" asp-action="AddInventoryDelivery" data-ajax="true" data-ajax-method="post" data-ajax-success="OnSuccess" data-ajax-failure="OnFailure">
                                <div class="form-row">
                                    <div class="col">
                                        <div class="form-group">
                                            <label for="address"><strong>Delivery Date</strong></label>
                                            <input type="date" asp-for="DeliveryDate" placeholder="John Smith" class="form-control" required>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-row">
                                    <div class="col">
                                        <div class="form-group">
                                            <label for="supplier"><strong>Supplier</strong></label>
                                            @Html.DropDownListFor(m => m.SupplierDetailsID, Model.SupplierDetailsList, "-- SELECT SUPPLIER--", new { @class = "form-control"  })

                                        </div>
                                    </div>
                                </div>
                                <div class="form-row">
                                    <div class="col">
                                        <div class="form-group">
                                            <label for="first_name"><strong>Price</strong></label> 

                                            <input type="number" asp-for="DeliveryPrice" placeholder="999.99" class="form-control" required>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-row">
                                    <div class="col">
                                        <div class="form-group">
                                            <label for="first_name"><strong>Remarks</strong></label>
                                            <textarea class="form-control" rows="4" asp-for="Remarks" name="remarks"></textarea>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group"><button class="btn btn-primary btn-sm" type="submit">Submit</button></div>
                            </form>
                        </div>
                    </div>
                     
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts{


    <partial name="_ValidationScriptsPartial" />

    <script type="text/javascript">
        function OnSuccess(e) {
            window.location.href="/Inventory/Index"


        }

        function OnFailure(e) {
            alert("Please enter the correct details!");
            windows.location.href = "/Inventory/Index"
        }

    </script>
} 
